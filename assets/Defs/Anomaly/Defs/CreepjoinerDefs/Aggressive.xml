<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <CreepJoinerAggressiveDef>
    <defName>Assault</defName>
    <label>basic assault</label>
    <weight>3</weight>
    <workerType>CreepJoinerWorker_AggressionBasic</workerType>
    <hasMessage>true</hasMessage>
    <message>{PAWN_nameDef} has become hostile!</message>
  </CreepJoinerAggressiveDef>
  
  <CreepJoinerAggressiveDef>
    <defName>FleshbeastEmergence</defName>
    <label>fleshbeast emergence</label>
    <weight>1</weight>
    <workerType>CreepJoinerWorker_FleshbeastEmergence</workerType>
    <hasLetter>true</hasLetter>
    <letterLabel>{PAWN_nameDef} transformed</letterLabel>
    <letterDesc>{PAWN_nameDef} has transformed into a hideous fleshbeast!</letterDesc>
    <minCombatPoints>150</minCombatPoints>
    <letterDef>ThreatBig</letterDef>
  </CreepJoinerAggressiveDef>
  
  <CreepJoinerAggressiveDef>
    <defName>SightstealerAttack</defName>
    <label>sightstealer attack</label>
    <weight>1</weight>
    <workerType>CreepJoinerWorker_SightstealerAttack</workerType>
    <hasLetter>true</hasLetter>
    <letterLabel>{PAWN_nameDef}'s howl</letterLabel>
    <letterDesc>{PAWN_nameDef} has let out a twisted half-human scream.\n\nIn the distance, you can hear other screams answering the call.\n\nThey are coming...</letterDesc>
    <letterDef>ThreatBig</letterDef>
  </CreepJoinerAggressiveDef>
  
</Defs>