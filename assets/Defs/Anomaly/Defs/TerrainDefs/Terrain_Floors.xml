<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <TerrainDef ParentName="FloorBase">
    <defName>Voidmetal</defName>
    <label>void metal</label>
    <description>This slick dark surface is disorienting to look at. The near-featureless surface seems to shift constantly, but is cold and hard to the touch. It evokes the sense of a malevolent force lurking under the surface, waiting to reach up and pull you into the depths.</description>
    <texturePath>Terrain/Surfaces/Voidmetal</texturePath>
    <renderPrecedence>240</renderPrecedence>
    <fertility>0</fertility>
    <designationCategory />
    <statBases>
      <Beauty>0</Beauty>
      <Cleanliness>1</Cleanliness>
      <CleaningTimeFactor>0.6</CleaningTimeFactor>
    </statBases>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
    </affordances>
  </TerrainDef>
  
  <TerrainDef ParentName="FloorBase">
    <defName>BioferritePlate</defName>
    <label>bioferrite plate</label>
    <description>Heavy plate flooring made from smoothed bioferrite. While ugly and slightly flammable, it's quick to clean and increases the containment strength of nearby holding platforms.</description>
    <texturePath>Terrain/Surfaces/BioferritePlateFloor</texturePath>
    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
    <constructEffect>ConstructMetal</constructEffect>
    <edgeType>Hard</edgeType>
    <renderPrecedence>240</renderPrecedence>
    <burnedDef>BurnedBioferritePlate</burnedDef>
    <color>(100, 80, 80)</color>
    <fertility>0</fertility>
    <statBases>
      <WorkToBuild>800</WorkToBuild>
      <Beauty>-2</Beauty>
      <Cleanliness>0.2</Cleanliness>
      <CleaningTimeFactor>0.6</CleaningTimeFactor>
      <Flammability>0.15</Flammability>
      <ContainmentStrength>15</ContainmentStrength>
    </statBases>
    <costList>
      <Bioferrite>4</Bioferrite>
    </costList>
    <researchPrerequisites>
      <li>BioferriteShaping</li>
    </researchPrerequisites>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
    </affordances>
    <uiOrder>2050</uiOrder>
  </TerrainDef>
  
</Defs>
