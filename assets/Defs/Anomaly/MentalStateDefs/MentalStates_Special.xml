    <beginLetterDef>NeutralEvent</beginLetterDef>
    <recoveryMessage>{PAWN_nameDef} has finished {PAWN_possessive} cube structure.</recoveryMessage> 
    <recoverFromSleep>false</recoverFromSleep>
