<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <LayoutRoomDef>
    <defName>AncientRechargeRoom</defName>
    <canMergeWithAdjacentRoom>true</canMergeWithAdjacentRoom>
    <prefabs>
      <AncientBasicRecharger_Edge>
        <countPerTenEdgeCells>2</countPerTenEdgeCells>
        <minMaxRange>5~15</minMaxRange>
      </AncientBasicRecharger_Edge>
      <AncientStandardRecharger>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>1~1</minMaxRange>
      </AncientStandardRecharger>
      <AncientLargeMechGestator>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>1~1</minMaxRange>
      </AncientLargeMechGestator>
      <AncientLamp_Single>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </AncientLamp_Single>
    </prefabs>
    <floorTypes>
      <li>AncientTile</li>
    </floorTypes>
    <scatter>
      <ChunkMechanoidSlag>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>1~2</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
        <minGroups>1</minGroups>
      </ChunkMechanoidSlag>
    </scatter>
  </LayoutRoomDef>

  <LayoutRoomDef>
    <defName>AncientMechGestatorRoom</defName>
    <canMergeWithAdjacentRoom>true</canMergeWithAdjacentRoom>
    <prefabs>
      <AncientMechGestator_Cluster>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>1~5</minMaxRange>
      </AncientMechGestator_Cluster>
      <AncientLargeMechGestator>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>1~5</minMaxRange>
      </AncientLargeMechGestator>
      <AncientLamp_Single>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </AncientLamp_Single>
    </prefabs>
    <floorTypes>
      <li>AncientTile</li>
    </floorTypes>
    <scatter>
      <ChunkMechanoidSlag>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>1~2</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
        <minGroups>1</minGroups>
      </ChunkMechanoidSlag>
    </scatter>
  </LayoutRoomDef>

  <LayoutRoomDef>
    <defName>AncientMechGeneratorRoom</defName>
    <prefabs>
      <AncientGenerator_SmallCluster>
        <countPerHundredCells>2</countPerHundredCells>
        <minMaxRange>1~2</minMaxRange>
      </AncientGenerator_SmallCluster>
      <AncientBarrel_Cluster>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>1~5</minMaxRange>
      </AncientBarrel_Cluster>
      <AncientLamp_Single>
        <countPerHundredCells>5</countPerHundredCells>
        <minMaxRange>0~1</minMaxRange>
      </AncientLamp_Single>
    </prefabs>
    <floorTypes>
      <li>AncientConcrete</li>
    </floorTypes>
    <scatter>
      <Filth_OilSmear>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>1~2</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
        <minGroups>1</minGroups>
      </Filth_OilSmear>
    </scatter>
  </LayoutRoomDef>

  <LayoutRoomDef>
    <defName>AncientBandNodeRoom</defName>
    <minSingleRectWidth>10</minSingleRectWidth>
    <minSingleRectHeight>10</minSingleRectHeight>
    <prefabs>
      <AncientDisplayBank_Edge>
        <countPerTenEdgeCells>3</countPerTenEdgeCells>
        <minMaxRange>2~6</minMaxRange>
      </AncientDisplayBank_Edge>
      <AncientBandNode_Cluster>
        <countPerHundredCells>10</countPerHundredCells>
        <minMaxRange>5~15</minMaxRange>
      </AncientBandNode_Cluster>
    </prefabs>
    <floorTypes>
      <li>AncientConcrete</li>
    </floorTypes>
    <edgeTerrain>AncientTile</edgeTerrain>
    <scatter>
      <ChunkMechanoidSlag>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>1~2</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
        <minGroups>1</minGroups>
      </ChunkMechanoidSlag>
    </scatter>
  </LayoutRoomDef>
  
</Defs>