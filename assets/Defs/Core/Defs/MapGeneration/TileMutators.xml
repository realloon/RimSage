<?xml version="1.0" encoding="utf-8"?>

<!--
-200: Elevation changers (mountains, cliffs)
-100: Caves
50: Rivers (After lakes)
100: Coast
-->

<Defs>
  <TileMutatorDef>
    <defName>Mountain</defName>
    <label>mountain</label>
    <description>A mountain fills one side of this tile.</description>
    <categories>
      <li>Mountain</li>
    </categories>
    <workerClass>TileMutatorWorker_Mountain</workerClass>
    <genOrder>-200</genOrder> <!-- Must be before any mutators that generate caves -->
  </TileMutatorDef>

  <TileMutatorDef>
    <defName>Caves</defName>
    <label>caves</label>
    <description>Small cave networks can be found within the rocks.</description>
    <categories>
      <li>Caves</li>
      <li>BaseCaves</li>
    </categories>
    <workerClass>TileMutatorWorker_Caves</workerClass>
    <genOrder>-100</genOrder> <!-- After mountain but before other terrain gen -->
  </TileMutatorDef>

  <TileMutatorDef>
    <defName>Coast</defName>
    <label>coast</label>
    <description>This tile borders the coast.</description>
    <categories>
      <li>Coast</li>
    </categories>
    <workerClass>TileMutatorWorker_Coast</workerClass>
    <genOrder>100</genOrder>
  </TileMutatorDef>

  <TileMutatorDef>
    <defName>River</defName>
    <label>river</label>
    <description>A stream of fresh water flows through here.</description>
    <categories>
      <li>River</li>
    </categories>
    <workerClass>TileMutatorWorker_River</workerClass>
    <genOrder>50</genOrder> <!-- Must be after lakes so they can intersect -->
  </TileMutatorDef>

  <TileMutatorDef>
    <defName>UndergroundCave</defName>
    <label>underground cave</label>
    <categories>
      <li>Caves</li>
    </categories>
    <priority>5</priority>
    <workerClass>TileMutatorWorker_UndergroundCave</workerClass>
    <genOrder>-100</genOrder> <!-- After mountain but before other terrain gen -->
  </TileMutatorDef>
</Defs>