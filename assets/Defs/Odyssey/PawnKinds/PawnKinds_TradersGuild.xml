<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <PawnKindDef Name="TradersGuildBase" Abstract="True">
    <race>Human</race>
    <defaultFactionDef>TradersGuild</defaultFactionDef>
    <chemicalAddictionChance>0.05</chemicalAddictionChance>
    <combatPower>45</combatPower>
    <invNutrition>2.55</invNutrition>
    <itemQuality>Normal</itemQuality>
    <backstoryCryptosleepCommonality>0.08</backstoryCryptosleepCommonality>
    <maxGenerationAge>65</maxGenerationAge>
    <combatEnhancingDrugsChance>0.15</combatEnhancingDrugsChance>
    <combatEnhancingDrugsCount>0~2</combatEnhancingDrugsCount>
    <biocodeWeaponChance>0.2</biocodeWeaponChance>
    <initialWillRange>0~1</initialWillRange>
    <initialResistanceRange>10~17</initialResistanceRange>
  </PawnKindDef>
  
  <PawnKindDef ParentName="TradersGuildBase">
    <defName>TradersGuild_Citizen</defName>
    <label>guild citizen</label>
    <isFighter>false</isFighter>
    <gearHealthRange>0.2~2.0</gearHealthRange>
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
    <weaponMoney>150~250</weaponMoney>
    <apparelMoney>200~400</apparelMoney>
    <apparelAllowHeadgearChance>0.4</apparelAllowHeadgearChance>
    <techHediffsChance>0.06</techHediffsChance>
    <techHediffsMoney>50~600</techHediffsMoney>
    <techHediffsTags>
      <li>Simple</li>
      <li>ImplantEmpireCommon</li>
    </techHediffsTags>
    <apparelRequired Inherit="False">
      <li>Apparel_VacsuitHelmet</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">Apparel_VacsuitChildren</li>
    </apparelRequired>
  </PawnKindDef>

  <PawnKindDef ParentName="TradersGuildBase">
    <defName>TradersGuild_Child</defName>
    <isFighter>false</isFighter>
    <weaponTags/>
    <weaponMoney>0</weaponMoney>
    <apparelMoney>200~400</apparelMoney>
    <pawnGroupDevelopmentStage>Child</pawnGroupDevelopmentStage>
  </PawnKindDef>

  <!-- Mid guild tier - gunner, slasher -->

  <PawnKindDef ParentName="TradersGuildBase" Name="TradersGuildMidTierBase" Abstract="True">
    <techHediffsChance>0.15</techHediffsChance>
    <techHediffsMoney>700~1200</techHediffsMoney>
    <techHediffsTags>
      <li>Simple</li>
      <li>Advanced</li>
      <li>ImplantEmpireCommon</li>
    </techHediffsTags>
    <biocodeWeaponChance>0.2</biocodeWeaponChance>
    <initialWillRange>2~4</initialWillRange>
    <apparelRequired>
      <li>Apparel_Vacsuit</li>
      <li>Apparel_VacsuitHelmet</li>
    </apparelRequired>
  </PawnKindDef>

    <PawnKindDef ParentName="TradersGuildMidTierBase" Name="TradersGuildGunnerBase" Abstract="True">
    <label>guild gunner</label>
    <combatPower>85</combatPower>
    <gearHealthRange>0.7~3.2</gearHealthRange>
    <apparelTags>
      <li>IndustrialBasic</li>
      <li>IndustrialAdvanced</li>
      <li>IndustrialMilitaryBasic</li>
      <li>IndustrialMilitaryAdvanced</li>
      <li>BeltDefensePop</li>
