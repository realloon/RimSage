<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <StructureLayoutDef Name="MechhiveBase" ParentName="OrbitalMechanoidPlatformBase" Abstract="True">
    <doorDef>Door</doorDef>
    <doorStuffDef>Steel</doorStuffDef>
    <exteriorDoorDef>AncientBlastDoor</exteriorDoorDef>
    <exteriorDoorStuffDef IsNull="True"/>
    <surroundingTerrainDef IsNull="True" />
  </StructureLayoutDef>

  <StructureLayoutDef ParentName="MechhiveBase">
    <defName>Mechhive</defName>
    <workerClass>LayoutWorker_Mechhive</workerClass>
    <importantRoomDef>Mechhive_Stabilizer</importantRoomDef>
    <minRoomWidth>10</minRoomWidth>
    <minRoomHeight>10</minRoomHeight>
    <roomDefs>
      <!-- Special -->
      <MechChargingRoom>
        <countRange>1</countRange>
      </MechChargingRoom>

      <!-- Decorative -->
      <NarrowHalls>1.5</NarrowHalls>
      <InnerCourtyard>0.65</InnerCourtyard>
      <InnerCourtyardRooms>0.25</InnerCourtyardRooms>
      <MechStorageRoom>1.4</MechStorageRoom>

      <!-- Threats -->
      <MechGloomlightRoom>1</MechGloomlightRoom>
      <MechGestationRoom>1</MechGestationRoom>
      <MechProcessorRoom>1</MechProcessorRoom>
    </roomDefs>
  </StructureLayoutDef>
  
  <StructureLayoutDef ParentName="MechhiveBase">
    <defName>Mechhive_SingleRoom</defName>
    <workerClass>LayoutWorker_SingleRoom</workerClass>
    <roomDefs>
      <InnerCourtyardRooms>1</InnerCourtyardRooms>
      <MechGestationRoom>1</MechGestationRoom>
      <MechProcessorRoom>1</MechProcessorRoom>
    </roomDefs>
  </StructureLayoutDef>
</Defs>