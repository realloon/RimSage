<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
  <ThingDef ParentName="BuildingBase">
    <defName>HunterDroneTrap</defName>
    <label>hunter trap</label>
    <description>A dormant hunter drone that activates when it detects a threat. The hunter drone closes with the target and detonates. Since it is hidden in the surrounding terrain, it cannot be placed adjacent to other traps.</description>
    <descriptionHyperlinks>
      <ThingDef>Drone_Hunter</ThingDef>
    </descriptionHyperlinks>
    <thingClass>Building_TrapReleaseHunter</thingClass>
    <drawHighlight>true</drawHighlight>
    <drawHighlightOnlyForHostile>true</drawHighlightOnlyForHostile>
    <drawerType>RealtimeOnly</drawerType>
    <graphicData>
      <texPath>Things/Building/HunterTrap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <rect>(0,0,1,0.15)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <stealable>false</stealable>
    <minifiedDef>MinifiedThing</minifiedDef>
    <uiOrder>30</uiOrder>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <costList>
      <Steel>40</Steel>
      <Chemfuel>40</Chemfuel>
    </costList>
    <statBases>
      <Mass>10</Mass>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>3600</WorkToBuild>
      <Flammability>1</Flammability>
      <Beauty>-15</Beauty>
      <TrapSpringChance>1.0</TrapSpringChance>
    </statBases>
    <designationCategory>Security</designationCategory>
    <designationHotKey>Misc6</designationHotKey>
    <building>
      <isTrap>true</isTrap>
      <trapDestroyOnSpring>true</trapDestroyOnSpring>
      <expandHomeArea>false</expandHomeArea>
      <ai_chillDestination>false</ai_chillDestination>
      <claimable>false</claimable>
    </building>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>HunterDrones</li>
    </researchPrerequisites>
    <placeWorkers>
      <li>PlaceWorker_NeverAdjacentTrap</li>
    </placeWorkers>
    <comps>
      <li Class="CompProperties_Stunnable">
        <affectedDamageDefs>
          <li>Stun</li>
          <li>EMP</li>
        </affectedDamageDefs>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>WaspDroneTrap</defName>
    <label>wasp trap</label>
    <description>Several dormant wasp drones. They activate when they detect threats, injecting their target with a paralytic biotoxin.</description>
    <descriptionHyperlinks>
      <ThingDef>Drone_Wasp</ThingDef>
    </descriptionHyperlinks>
    <thingClass>Building_TrapReleaseWasp</thingClass>
    <drawHighlight>true</drawHighlight>
    <drawHighlightOnlyForHostile>true</drawHighlightOnlyForHostile>
    <drawerType>RealtimeOnly</drawerType>
    <graphicData>
      <texPath>Things/Building/WaspTrap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <rect>(0,0,1,0.15)</rect>
      </damageData>
      <drawSize>0.9</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <stealable>false</stealable>
    <minifiedDef>MinifiedThing</minifiedDef>
    <uiOrder>30</uiOrder>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <statBases>
      <MarketValue>80</MarketValue>
      <Mass>2.5</Mass>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>3200</WorkToBuild>
      <Flammability>1</Flammability>
      <Beauty>-15</Beauty>
      <TrapSpringChance>1.0</TrapSpringChance>
    </statBases>
    <building>
      <isTrap>true</isTrap>
      <trapDestroyOnSpring>true</trapDestroyOnSpring>
      <expandHomeArea>false</expandHomeArea>
      <ai_chillDestination>false</ai_chillDestination>
      <claimable>false</claimable>
    </building>
    <placeWorkers>
      <li>PlaceWorker_NeverAdjacentTrap</li>
    </placeWorkers>
    <comps>
      <li Class="CompProperties_Stunnable">
        <affectedDamageDefs>
          <li>Stun</li>
          <li>EMP</li>
        </affectedDamageDefs>
      </li>
    </comps>
  </ThingDef>
  
</Defs>