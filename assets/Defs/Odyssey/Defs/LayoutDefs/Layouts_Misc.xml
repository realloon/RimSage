<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <StructureLayoutDef>
    <defName>SpaceRuins</defName>
    <workerClass>LayoutWorker_SimpleRuin</workerClass>
    <canHaveMultipleLayoutsInRoom>true</canHaveMultipleLayoutsInRoom>
    <roomDefs>
      <AncientRuinsCryptosleepCasketNoThreat />
    </roomDefs>
  </StructureLayoutDef>

  <StructureLayoutDef Name="AncientStockpileBase" Abstract="True">
    <workerClass>LayoutWorker_AncientStockpile</workerClass>
    <canHaveMultipleLayoutsInRoom>true</canHaveMultipleLayoutsInRoom>
    <clearRoomsEntirely>true</clearRoomsEntirely>
    <minRoomWidth>8</minRoomWidth>
    <minRoomHeight>8</minRoomHeight>
    
    <!-- Structure -->
    <doorStuffDef>Steel</doorStuffDef>
    <wallDef>AncientFortifiedWall</wallDef>
    <wallLampDef>AncientEmergencyLight_Red</wallLampDef>
    
    <roomDefs>
      <!-- Special -->
      <AncientStockpileEntrance>
        <countRange>1</countRange>
      </AncientStockpileEntrance>
    </roomDefs>
    <junkScaterrers>
      <Filth_Trash>
        <groupsPerHundredCells>0~3</groupsPerHundredCells>
        <itemsPerGroup>2~4</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
      </Filth_Trash>
      <Filth_BlastMark>
        <groupsPerHundredCells>-2~1</groupsPerHundredCells> <!-- ~66% to not appear -->
        <itemsPerGroup>1~1</itemsPerGroup>
      </Filth_BlastMark>
      <Filth_MachineBits>
        <groupsPerHundredCells>-1~1</groupsPerHundredCells> <!-- ~50% to not appear -->
        <itemsPerGroup>2~4</itemsPerGroup>
        <groupDistRange>2~4</groupDistRange>
      </Filth_MachineBits>
      <RubblePile>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>2~4</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
        <minGroups>1</minGroups>
      </RubblePile>
      <Filth_RubbleRock>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>3~8</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
        <minGroups>1</minGroups>
      </Filth_RubbleRock>
      <Granite>
        <groupsPerHundredCells>1~2</groupsPerHundredCells>
        <itemsPerGroup>3~8</itemsPerGroup>
        <groupDistRange>1~2</groupDistRange>
        <minGroups>1</minGroups>
      </Granite>
    </junkScaterrers>
  </StructureLayoutDef>

  <StructureLayoutDef ParentName="AncientStockpileBase">
    <defName>AncientStockpile</defName>
    <roomDefs>
      <!-- Special -->
      <AncientStockpileStockpile>
        <countRange>1</countRange>
      </AncientStockpileStockpile>
      
      <!-- Decorative -->
      <AncientLivingArea>1</AncientLivingArea>
      <AncientSleepingArea>1</AncientSleepingArea>

      <!-- Small threats -->
      <AncientComputerRoom>1</AncientComputerRoom>
      <AncientRuinsShelfWithLootRoom_Underground>1</AncientRuinsShelfWithLootRoom_Underground>

      <!-- Large threats -->
      <AncientRuinsInsectHive_Underground>0.5</AncientRuinsInsectHive_Underground>
      
    </roomDefs>
  </StructureLayoutDef>

  <StructureLayoutDef ParentName="AncientStockpileBase">
    <defName>AncientStockpileFake</defName>
    <roomDefs>
      <!-- Special -->
      <AncientRuinsShelfWithLootRoom_Underground>
        <countRange>1~2</countRange>
      </AncientRuinsShelfWithLootRoom_Underground>

      <!-- Decorative -->
      <AncientLivingArea>2</AncientLivingArea>
      <AncientSleepingArea>1</AncientSleepingArea>

      <!-- Small threats -->
      <AncientComputerRoom>0.5</AncientComputerRoom>

      <!-- Large threats -->
      <AncientRuinsInsectHive_Underground>0.1</AncientRuinsInsectHive_Underground>
    </roomDefs>
  </StructureLayoutDef>

  <StructureLayoutDef>
    <defName>OrbitalItemStash</defName>
    <workerClass>LayoutWorker_AncientStockpile</workerClass>
    <canHaveMultipleLayoutsInRoom>true</canHaveMultipleLayoutsInRoom>
    <clearRoomsEntirely>true</clearRoomsEntirely>
    <minRoomWidth>8</minRoomWidth>
    <minRoomHeight>8</minRoomHeight>

    <!-- Structure -->
    <exteriorDoorDef>AncientBlastDoor</exteriorDoorDef>
    <doorStuffDef>Steel</doorStuffDef>
    <wallDef>AncientFortifiedWall</wallDef>
    <wallLampDef>AncientEmergencyLight_Blue</wallLampDef>
    
    <roomDefs>
      <!-- Special -->
      <OrbitalItemStash_ItemRoom>
        <countRange>1</countRange>
      </OrbitalItemStash_ItemRoom>
      
      <!-- Decorative -->
      <AncientLivingArea>0.5</AncientLivingArea>
      <AncientRuinsBarracks>0.75</AncientRuinsBarracks>
      <InnerCourtyardRooms>
        <countRange>0~1</countRange>
      </InnerCourtyardRooms>
      <OrbitalTransportRoom>0.5</OrbitalTransportRoom>

      <!-- Threats -->
      <AncientRuinsShelfWithLootRoom>
        <countRange>0~1</countRange>
      </AncientRuinsShelfWithLootRoom>
      <AncientComputerRoom>
        <countRange>0~2</countRange>
      </AncientComputerRoom>
      <AncientStockpileSecurityRoom>0.25</AncientStockpileSecurityRoom>
    </roomDefs>
    <junkScaterrers>
      <Filth_Trash>
        <groupsPerHundredCells>0~3</groupsPerHundredCells>
        <itemsPerGroup>2~4</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
      </Filth_Trash>
      <Filth_BlastMark>
        <groupsPerHundredCells>-2~1</groupsPerHundredCells> <!-- ~66% to not appear -->
        <itemsPerGroup>1~1</itemsPerGroup>
      </Filth_BlastMark>
      <Filth_MachineBits>
        <groupsPerHundredCells>-1~1</groupsPerHundredCells> <!-- ~50% to not appear -->
        <itemsPerGroup>2~4</itemsPerGroup>
        <groupDistRange>2~4</groupDistRange>
      </Filth_MachineBits>
      <RubblePile>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>2~4</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
        <minGroups>1</minGroups>
      </RubblePile>
      <Filth_RubbleRock>
        <groupsPerHundredCells>2~4</groupsPerHundredCells>
        <itemsPerGroup>3~8</itemsPerGroup>
        <groupDistRange>3~5</groupDistRange>
        <minGroups>1</minGroups>
      </Filth_RubbleRock>
    </junkScaterrers>
    <parts>
      <Breached>0.1</Breached>
      <Gore>0.2</Gore>
    </parts>
  </StructureLayoutDef>
  
</Defs>