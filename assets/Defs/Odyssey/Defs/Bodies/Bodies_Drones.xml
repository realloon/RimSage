<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <BodyPartDef>
    <defName>DroneShell</defName>
    <label>shell</label>
    <hitPoints>40</hitPoints>
    <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
    <skinCovered>false</skinCovered>
    <solid>true</solid>
    <alive>false</alive>
    <bleedRate>0</bleedRate>
    <tags>
      <li>ManipulationLimbCore</li>
      <li>MovingLimbCore</li>
    </tags>
  </BodyPartDef>

  <BodyPartDef>
    <defName>DroneCore</defName>
    <label>core</label>
    <hitPoints>50</hitPoints>
    <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
    <skinCovered>false</skinCovered>
    <solid>true</solid>
    <alive>false</alive>
    <bleedRate>0</bleedRate>
    <tags>
      <li>ConsciousnessSource</li>
      <li>BloodPumpingSource</li>
      <li>BloodFiltrationSource</li>
      <li>HearingSource</li>
    </tags>
  </BodyPartDef>

  <BodyPartDef>
    <defName>DroneEye</defName>
    <label>visual sensor</label>
    <hitPoints>25</hitPoints>
    <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
    <skinCovered>false</skinCovered>
    <solid>true</solid>
    <alive>false</alive>
    <bleedRate>0</bleedRate>
    <tags>
      <li>SightSource</li>
    </tags>
  </BodyPartDef>

  <BodyPartDef>
    <defName>DroneShellSection</defName>
    <label>shell section</label>
    <hitPoints>25</hitPoints>
    <frostbiteVulnerability>5</frostbiteVulnerability>
    <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
    <skinCovered>false</skinCovered>
    <solid>true</solid>
    <alive>false</alive>
    <bleedRate>0</bleedRate>
  </BodyPartDef>

  <BodyPartDef>
    <defName>DroneShellSectionWithSpike</defName>
    <label>spiked shell section</label>
    <hitPoints>25</hitPoints>
    <frostbiteVulnerability>5</frostbiteVulnerability>
    <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
    <skinCovered>false</skinCovered>
    <solid>true</solid>
    <alive>false</alive>
    <bleedRate>0</bleedRate>
  </BodyPartDef>

  <BodyPartDef>
    <defName>DroneChassis</defName>
    <label>chassis</label>
    <hitPoints>40</hitPoints>
    <frostbiteVulnerability>0</frostbiteVulnerability>
    <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
    <skinCovered>false</skinCovered>
    <solid>true</solid>
    <alive>false</alive>
    <bleedRate>0</bleedRate>
    <tags>
      <li>ManipulationLimbCore</li>
    </tags>
  </BodyPartDef>

  <BodyPartDef>
    <defName>DroneTreads</defName>
    <label>tread</label>
    <hitPoints>15</hitPoints>
    <frostbiteVulnerability>5</frostbiteVulnerability>
    <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
    <skinCovered>false</skinCovered>
    <solid>true</solid>
    <alive>false</alive>
    <bleedRate>0</bleedRate>
    <tags>
      <li>MovingLimbCore</li>
    </tags>
  </BodyPartDef>
  
  <BodyDef>
    <defName>Drone</defName>
    <label>drone</label>
    <corePart>
      <def>DroneShell</def>
      <height>Middle</height>
      <depth>Outside</depth>
      <groups>
        <li>Torso</li>
      </groups>
      <parts>
        <li>
          <def>DroneCore</def>
          <coverage>0.05</coverage>
          <depth>Inside</depth>
        </li>
        <li>
          <def>DroneEye</def>
          <coverage>0.05</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneShellSection</def>
          <coverage>0.2</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneShellSection</def>
          <coverage>0.2</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneShellSectionWithSpike</def>
          <coverage>0.2</coverage>
          <depth>Outside</depth>
          <groups>
            <li>SpikedShellAttackTool</li>
          </groups>
        </li>
      </parts>
    </corePart>
  </BodyDef>

  <BodyDef>
    <defName>DroneWithTreads</defName>
    <label>drone</label>
    <corePart>
      <def>DroneChassis</def>
      <height>Middle</height>
      <depth>Outside</depth>
      <groups>
        <li>Torso</li>
      </groups>
      <parts>
        <li>
          <def>DroneCore</def>
          <coverage>0.05</coverage>
          <depth>Inside</depth>
        </li>
        <li>
          <def>DroneTreads</def>
          <customLabel>front left tread</customLabel>
          <coverage>0.05</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneTreads</def>
          <customLabel>back left tread</customLabel>
          <coverage>0.05</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneTreads</def>
          <customLabel>front right tread</customLabel>
          <coverage>0.05</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneTreads</def>
          <customLabel>back right tread</customLabel>
          <coverage>0.05</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneEye</def>
          <coverage>0.05</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneShellSection</def>
          <coverage>0.2</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneShellSectionWithSpike</def>
          <coverage>0.2</coverage>
          <depth>Outside</depth>
          <groups>
            <li>SpikedShellAttackTool</li>
          </groups>
        </li>
      </parts>
    </corePart>
  </BodyDef>

  <BodyDef>
    <defName>DroneWithThreeLegs</defName>
    <label>drone</label>
    <corePart>
      <def>DroneChassis</def>
      <height>Middle</height>
      <depth>Outside</depth>
      <groups>
        <li>Torso</li>
      </groups>
      <parts>
        <li>
          <def>DroneCore</def>
          <coverage>0.05</coverage>
          <depth>Inside</depth>
        </li>
        <li>
          <def>DroneEye</def>
          <coverage>0.05</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneShellSection</def>
          <coverage>0.2</coverage>
          <depth>Outside</depth>
        </li>
        <li>
          <def>DroneShellSectionWithSpike</def>
          <coverage>0.2</coverage>
          <depth>Outside</depth>
          <groups>
            <li>SpikedShellAttackTool</li>
          </groups>
        </li>
        <li>
          <def>Leg</def>
          <customLabel>center leg</customLabel>
          <coverage>0.07</coverage>
          <height>Bottom</height>
        </li>
        <li>
          <def>Leg</def>
          <customLabel>rear left leg</customLabel>
          <coverage>0.07</coverage>
          <height>Bottom</height>
        </li>
        <li>
          <def>Leg</def>
          <customLabel>rear right leg</customLabel>
          <coverage>0.07</coverage>
          <height>Bottom</height>
        </li>
      </parts>
    </corePart>
  </BodyDef>
</Defs>