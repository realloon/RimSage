<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
  <ThingDef ParentName="SkyfallerBase">
    <defName>LavaRockIncoming</defName>
    <thingClass>LavaRockIncoming</thingClass>
    <label>lava rock (incoming)</label>
    <size>(2, 2)</size>
    <graphicData>
      <texPath>Things/Skyfaller/VolcanicDebris</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <drawSize>(10, 10)</drawSize>
    </graphicData>
    <skyfaller>
      <shadowSize>(3, 3)</shadowSize>
      <explosionRadius>5</explosionRadius>
      <explosionDamage>Bomb</explosionDamage>
      <rotateGraphicTowardsDirection>true</rotateGraphicTowardsDirection>
      <speed>0.9</speed>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="DropPodLeaving">
