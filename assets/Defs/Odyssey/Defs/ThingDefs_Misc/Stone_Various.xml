<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="RockBase" Name="SolidIceBase">
    <defName>SolidIce</defName>
    <label>solid ice</label>
    <description>Solid glacial ice. It can be mined through with relative ease.</description>
    <uiIconPath>Things/Building/Linked/SolidIceWall_MenuIcon</uiIconPath>
    <graphicData>
      <texPath>Things/Building/Linked/SolidIceWall_Atlas</texPath>
      <color>(220,243,243)</color>
      <linkFlags Inherit="false">
        <li>SolidIce</li>
        <li>MapEdge</li>
      </linkFlags>
    </graphicData>
    <statBases>
      <Flammability>0</Flammability>
      <Beauty>0</Beauty>
      <MaxHitPoints>240</MaxHitPoints>
    </statBases>
    <building>
      <smoothedThing>SmoothedSolidIce</smoothedThing>
      <mineableYieldWasteable>false</mineableYieldWasteable>
      <biomeSpecific>true</biomeSpecific>
      <mineableScatterLumpSizeRange>12~32</mineableScatterLumpSizeRange>
      <mineablePreventMeteorite>true</mineablePreventMeteorite>
      <naturalTerrain>Ice</naturalTerrain>
      <leaveTerrain>Ice</leaveTerrain>
    </building>
    <filthLeaving>Filth_ChippedIce</filthLeaving>
  </ThingDef>

  <ThingDef ParentName="SolidIceBase">
    <defName>SmoothedSolidIce</defName>
    <label>smoothed solid ice</label>
    <description>Solid glacial ice. It can be mined through with relative ease. The polished surface glistens a soft light blue.</description>
    <uiIconPath>Things/Building/Linked/SmoothedIce_MenuIcon</uiIconPath>
    <graphicData>
      <texPath>Things/Building/Linked/SmoothedIce_Atlas</texPath>
    </graphicData>
    <statBases>
      <Beauty>1</Beauty>
    </statBases>
    <building>
      <isNaturalRock>false</isNaturalRock>
      <canBuildNonEdificesUnder>true</canBuildNonEdificesUnder>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
      <smoothedThing />
    </building>
    <saveCompressible>false</saveCompressible>
    <repairEffect>Repair</repairEffect>
  </ThingDef>
  
  <!-- ====== Vacstone ====== -->

  <ThingDef ParentName="UglyRockBase" Name="VacstoneBase">
    <defName>Vacstone</defName>
    <label>vacstone</label>
    <description>Compacted rock and dust harvested from asteroids.</description>
    <graphicData>
      <color>(115,106,98)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>600</MaxHitPoints>
    </statBases>
    <building>
      <mineableThing>ChunkVacstone</mineableThing>
      <mineableDropChance>0.25</mineableDropChance>
      <smoothedThing>SmoothedVacstone</smoothedThing>
      <mineablePreventMeteorite>true</mineablePreventMeteorite>
      <mineablePreventNaturalRockOnSurface>true</mineablePreventNaturalRockOnSurface>
    </building>
  </ThingDef>

  <ThingDef ParentName="VacstoneBase">
    <defName>SmoothedVacstone</defName>
    <label>smoothed vacstone</label>
    <description>Smoothed, compacted rock and dust harvested from asteroids.</description>
    <uiIconPath>Things/Building/Linked/WallSmooth_MenuIcon</uiIconPath>
    <graphicData>
      <texPath>Things/Building/Linked/RockSmooth_Atlas</texPath>
    </graphicData>
    <statBases>
      <Beauty>1</Beauty>
      <MarketValue>7</MarketValue>
    </statBases>
    <building>
      <isNaturalRock>false</isNaturalRock>
      <canBuildNonEdificesUnder>true</canBuildNonEdificesUnder>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
      <smoothedThing />
      <paintable>true</paintable>
    </building>
    <saveCompressible>false</saveCompressible>
    <repairEffect>Repair</repairEffect>
  </ThingDef>

  <ThingDef ParentName="ChunkRockBase">
    <defName>ChunkVacstone</defName>
    <label>vacstone chunk</label>
    <graphicData>
      <color>(115,106,98)</color>
    </graphicData>
    <statBases>
      <Mass>18</Mass>
    </statBases>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <butcherProducts>
      <BlocksVacstone>20</BlocksVacstone>
    </butcherProducts>
  </ThingDef>

  <ThingDef ParentName="StoneBlocksBase">
    <defName>BlocksVacstone</defName>
    <label>vacstone blocks</label>
    <description>Blocks of compacted vacstone rock harvested from asteroids.</description>
    <graphicData>
      <color>(115,106,98)</color>
    </graphicData>
    <statBases>
      <Mass>0.9</Mass>
      <MarketValue>2</MarketValue>
    </statBases>
    <preventSpawningInResourcePod>true</preventSpawningInResourcePod>
    <stuffProps>
      <color>(115,106,98)</color>
      <soundImpactBullet>BulletImpact_Ground</soundImpactBullet>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <soundImpactMelee>Pawn_Melee_Punch_HitBuilding_Stone</soundImpactMelee>
      <stuffAdjective>vacstone</stuffAdjective>
      <statFactors>
        <Beauty>1.2</Beauty>
        <MaxHitPoints>1.8</MaxHitPoints>
      </statFactors>
      <canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff>
      <allowedInStuffGeneration>false</allowedInStuffGeneration>
    </stuffProps>
  </ThingDef>

  <RecipeDef ParentName="MakeStoneBlocksBase">
    <defName>Make_StoneBlocksVacstone</defName>
    <label>make vacstone blocks</label>
    <description>Cuts vacstone chunks into usable blocks.</description>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkVacstone</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkVacstone</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <BlocksVacstone>20</BlocksVacstone>
    </products>
  </RecipeDef>
</Defs>
