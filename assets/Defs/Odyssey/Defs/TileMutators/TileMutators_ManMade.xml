<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <TileMutatorDef>
    <defName>AncientRuins</defName>
    <label>ruins</label>
    <description>The remains of an ancient settlement. These ruins may contain a wide variety of possible threats.</description>
    <workerClass>TileMutatorWorker_AncientRuins</workerClass>
    <biomeBlacklist>
      <li>SeaIce</li>
      <li>IceSheet</li>
      <li>GlacialPlain</li>
    </biomeBlacklist>
  </TileMutatorDef>

  <TileMutatorDef>
    <defName>AncientRuins_Frozen</defName>
    <label>frozen ruins</label>
    <description>The ruins of an ancient settlement, now encased in solid ice. These ruins may contain untold dangers.</description>
    <workerClass>TileMutatorWorker_AncientRuins_Frozen</workerClass>
    <biomeWhitelist>
      <li>IceSheet</li>
      <li>GlacialPlain</li>
    </biomeWhitelist>
  </TileMutatorDef>

  <TileMutatorDef>
    <defName>AncientQuarry</defName>
    <label>ancient quarry</label>
    <description>This area was once mined for its natural resources, and the remains of the ancient quarry are still here.</description>
    <minHilliness>Mountainous</minHilliness>
    <genOrder>-100</genOrder> <!-- After cavern but before mineral rich -->
    <workerClass>TileMutatorWorker_AncientQuarry</workerClass>
    <extraGenSteps>
      <li>AncientMiningCharge</li>
      <li>AncientExplosivesCrate</li>
      <li>AncientExcavator</li>
      <li>AncientDrillPlatform</li>
      <li>AncientTuneller</li>
    </extraGenSteps>
  </TileMutatorDef>

  <TileMutatorDef Name="BaseAncientVentMut" Abstract="True">
    <label>ancient vent</label>
    <categories>
      <li>AncientVent</li>
    </categories>
    <biomeWhitelist>
      <li>Scarlands</li>
      <li>BorealForest</li>
      <li>TemperateForest</li>
      <li>TropicalRainforest</li>
      <li>AridShrubland</li>
      <li>Desert</li>
      <li>ExtremeDesert</li>
      <li>Grasslands</li>
    </biomeWhitelist>
  </TileMutatorDef>

  <TileMutatorDef ParentName="BaseAncientVentMut">
    <defName>AncientSmokeVent</defName>
    <label>ancient smoke vent</label>
    <description>This area has a number of massive exhaust vents. An ancient mechanism buried deep beneath the earth will occasionally vent large amounts of smoke, blocking out the sun for days at a time.</description>
    <workerClass>TileMutatorWorker_AncientSmokeVent</workerClass>
  </TileMutatorDef>

  <TileMutatorDef ParentName="BaseAncientVentMut">
    <defName>AncientToxVent</defName>
    <label>ancient toxic vent</label>
    <description>Massive toxic vents will regularly spew toxic fallout into the air. The vents connect to an ancient substructure buried deep beneath the earth.</description>
    <workerClass>TileMutatorWorker_AncientToxVent</workerClass>
  </TileMutatorDef>

  <TileMutatorDef ParentName="BaseAncientVentMut">
    <defName>AncientHeatVent</defName>
    <label>ancient heat vent</label>
    <description>Ancient ducts will regularly vent heat from an underground megastructure, dramatically raising the temperature of the surrounding area.</description>
    <workerClass>TileMutatorWorker_AncientHeatVent</workerClass>
    <biomeWhitelist Inherit="False">
      <li>AridShrubland</li>
      <li>Desert</li>
      <li>ExtremeDesert</li>
    </biomeWhitelist>
  </TileMutatorDef>

  <TileMutatorDef Name="AbandonedColonyMutatorBase" Abstract="True">
    <label>abandoned colony</label>
    <description>A recently abandoned colony.</description>
    <biomeBlacklist>
      <li>Scarlands</li>
      <li>SeaIce</li>
      <li>IceSheet</li>
    </biomeBlacklist>
  </TileMutatorDef>

  <TileMutatorDef ParentName="AbandonedColonyMutatorBase">
    <defName>AbandonedColonyTribal</defName>
    <workerClass>TileMutatorWorker_AbandonedColonyTribal</workerClass>
  </TileMutatorDef>

  <TileMutatorDef ParentName="AbandonedColonyMutatorBase">
    <defName>AbandonedColonyOutlander</defName>
    <workerClass>TileMutatorWorker_AbandonedColonyOutlander</workerClass>
  </TileMutatorDef>

  

  <TileMutatorDef>
    <defName>Harbor</defName>
    <label>harbor</label>
    <description>An abandoned coastal settlement.</description>
    <workerClass>TileMutatorWorker_Harbor</workerClass>
    <biomeBlacklist>
      <li>Scarlands</li>
      <li>SeaIce</li>
      <li>IceSheet</li>
    </biomeBlacklist>
  </TileMutatorDef>

  <TileMutatorDef>
    <defName>Stockpile</defName>
    <label>stockpile</label> <!-- not actually visible, overriden with a translation -->
    <description>This area contains an underground stockpile of resources. Be careful, some of the ancient defense systems may still be active.</description>
    <workerClass>TileMutatorWorker_Stockpile</workerClass>
    <biomeBlacklist>
      <li>SeaIce</li>
    </biomeBlacklist>
  </TileMutatorDef>

  <TileMutatorDef>
    <defName>AncientUplink</defName>
    <label>ancient uplink</label>
    <description>This area contains an uplink used for communication with a low orbit satellite. Hacking the uplink will reveal a hidden location in orbit.</description>
    <workerClass>TileMutatorWorker_AncientUplink</workerClass>
  </TileMutatorDef>

</Defs>