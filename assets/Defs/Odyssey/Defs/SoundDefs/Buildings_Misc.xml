      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Misc/AncientVent_A</clipPath>
          </li>
        </grains>
        <volumeRange>100</volumeRange>
        <pitchRange>0.9088235~1</pitchRange>
        <distRange>5~30</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>BurrowWall_Damaged</defName>
    <context>MapOnly</context>
    <maxSimultaneous>1</maxSimultaneous>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>Building/BurrowWall/Damaged</clipFolderPath>
          </li>
        </grains>
        <volumeRange>20~25</volumeRange>
        <pitchRange>0.9~1.1</pitchRange>
        <repeatMode>NeverTwice</repeatMode>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
