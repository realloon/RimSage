<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <SoundDef>
    <defName>GravshipEngine_Ambient</defName>
    <sustain>True</sustain>
    <context>MapOnly</context>
    <priorityMode>PrioritizeNearest</priorityMode>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Building/GravEngine_Idle_A</clipPath>
          </li>
        </grains>
        <volumeRange>15</volumeRange>
        <distRange>5~30</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>MechanoidRelay_Ambient</defName>
    <sustain>True</sustain>
    <context>MapOnly</context>
    <priorityMode>PrioritizeNearest</priorityMode>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Building/MechanoidRelayIdle_A</clipPath>
          </li>
        </grains>
        <volumeRange>50</volumeRange>
        <distRange>5~30</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>MechanoidStabilizer_Ambient</defName>
    <sustain>True</sustain>
    <context>MapOnly</context>
    <priorityMode>PrioritizeNearest</priorityMode>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Buildings/MechanoidStabilizerIdle_A</clipPath> <!-- This is in core to fix multiple sustainer issue -->
          </li>
        </grains>
        <volumeRange>30</volumeRange>
        <distRange>5~30</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>CerebrexCore_Ambient</defName>
    <sustain>True</sustain>
    <context>MapOnly</context>
    <priorityMode>PrioritizeNearest</priorityMode>
