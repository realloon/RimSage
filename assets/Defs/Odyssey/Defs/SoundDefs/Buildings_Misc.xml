      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipPath>Buildings/OxygenPump_Idle</clipPath> <!-- This is in core to fix multiple sustainer issue -->
          </li>
        </grains>
        <volumeRange>100</volumeRange>
        <distRange>5~30</distRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>GravshipShieldGenerator_Activate</defName>
    <context>MapOnly</context>
    <priorityMode>PrioritizeNearest</priorityMode>
    <maxVoices>1</maxVoices>
