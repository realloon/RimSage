<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThoughtDef>
    <defName>ToxWater</defName>
    <durationDays>0.1</durationDays>
    <stackLimit>1</stackLimit>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>tox water</label>
        <description>I'm soaked in this disgusting stuff. It itches and burns.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>HotSpring</defName>
    <durationDays>0.1</durationDays>
    <stackLimit>1</stackLimit>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>hot spring</label>
        <description>It's nice to dip my feet in the warm water.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>BlowingSand</defName>
    <durationDays>0.1</durationDays>
    <stackLimit>1</stackLimit>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <nullifyingPrecepts>
      <li MayRequire="Ludeon.RimWorld.Ideology">RoughLiving_Welcomed</li>
    </nullifyingPrecepts>
    <stages>
      <li>
        <label>blowing sand</label>
        <description>It gets everywhere! I can feel it between my teeth.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>DestroyedMechhive</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>30</durationDays>
    <stages>
      <li>
        <label>destroyed mechhive</label>
        <description>We defeated them! We're free of them now.</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>