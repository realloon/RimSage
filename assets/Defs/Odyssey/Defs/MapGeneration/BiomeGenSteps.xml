<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <GenStepDef>
    <defName>AncientRuins_Scarlands</defName>
    <order>740</order>
    <genStep Class="GenStep_AncientRuins">
      <layoutDef>AncientRuins_Scarlands</layoutDef>
    </genStep>
  </GenStepDef>
  
  <GenStepDef>
    <defName>CratersLarge</defName>
    <order>950</order>
    <linkWithSite>AncientReactor</linkWithSite>
    <genStep Class="GenStep_ScatterThings">
      <thingDef>CraterLarge</thingDef>
      <createUsedRect>true</createUsedRect>
      <skipRoofed>true</skipRoofed>
      <countPer10kCellsRange>1~4</countPer10kCellsRange>
      <warnOnFail>false</warnOnFail>
    </genStep>
  </GenStepDef>

  <GenStepDef>
    <defName>CratersMedium</defName>
    <order>951</order>
    <linkWithSite>AncientReactor</linkWithSite>
    <genStep Class="GenStep_ScatterThings">
      <thingDef>CraterMedium</thingDef>
      <createUsedRect>true</createUsedRect>
      <skipRoofed>true</skipRoofed>
      <countPer10kCellsRange>1~4</countPer10kCellsRange>
      <warnOnFail>false</warnOnFail>
    </genStep>
  </GenStepDef>
  
  <GenStepDef>
    <defName>CratersSmall</defName>
    <order>952</order>
    <linkWithSite>AncientReactor</linkWithSite>
    <genStep Class="GenStep_ScatterThings">
      <thingDef>CraterSmall</thingDef>
      <createUsedRect>true</createUsedRect>
      <skipRoofed>true</skipRoofed>
      <countPer10kCellsRange>2~6</countPer10kCellsRange>
      <warnOnFail>false</warnOnFail>
    </genStep>
  </GenStepDef>
  
  <GenStepDef>
    <defName>AncientRuins_Special</defName>
    <order>740</order>
    <genStep Class="GenStep_AncientRuins">
      <layoutDef>AncientRuins_Special</layoutDef>
    </genStep>
  </GenStepDef>

  <GenStepDef>
    <defName>Glaciers</defName>
    <order>350</order>
    <genStep Class="GenStep_Glaciers"/>
  </GenStepDef>

  <GenStepDef>
    <defName>FrozenRuins</defName>
    <order>740</order>
    <genStep Class="GenStep_FrozenRuins"/>
  </GenStepDef>
  
  <GenStepDef>
    <defName>GrasslandsElevationReduction</defName>
    <order>15</order> <!-- Between base elevation and mutator elevation -->
    <genStep Class="GenStep_ScaleElevation">
      <factor>0.93</factor>
    </genStep>
  </GenStepDef>

  <GenStepDef>
    <defName>GeothermalVents</defName>
    <order>950</order>
    <genStep Class="GenStep_GeothermalVents">
      <floraToScatter>
        <Agarilux>1.0</Agarilux>
        <Bryolux>0.1</Bryolux>
        <Plant_Nightgrass>2.0</Plant_Nightgrass>
      </floraToScatter>
      <densityByDistance>
        <points>
          <li>(0, 0)</li>
          <li>(5, 0.05)</li>
          <li>(10, 0.85)</li> <!-- Creates a ring around the geothermal vents -->
          <li>(15, 0.15)</li>
          <li>(50, 0.0)</li>
        </points>
      </densityByDistance>
      <thingDef>GeothermalVent</thingDef>
      <createUsedRect>true</createUsedRect>
      <allowInWaterBiome>false</allowInWaterBiome>
      <minSpacing>25</minSpacing>
      <extraNoBuildEdgeDist>4</extraNoBuildEdgeDist>
      <countPer10kCellsRange>0.7~1</countPer10kCellsRange>
      <clearSpaceSize>30</clearSpaceSize>
      <terrainValidationRadius>4</terrainValidationRadius>
      <terrainValidationDisallowed>
        <li>Road</li>
      </terrainValidationDisallowed>
      <validators>
        <li Class="ScattererValidator_Buildable">
          <radius>4</radius>
          <affordance>Heavy</affordance>
        </li>
        <li Class="ScattererValidator_NoNonNaturalEdifices">
          <radius>4</radius>
        </li>
        <li Class="ScattererValidator_AvoidSpecialThings" />
        <li Class="ScatterValidator_AvoidUsedRects">
          <size>(5, 5)</size>
        </li>
      </validators>
    </genStep>
  </GenStepDef>
  
</Defs>
