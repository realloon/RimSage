<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <BiomeDef>
    <defName>Glowforest</defName>
    <label>glowforest</label>
    <description>Geysers spew out massive sulfur clouds that cast the region into permanent darkness. Huge fungal colonies bloom in the dark, fed by the nutrients that the geysers bring to the surface. These areas are alluring and dangerous.</description>
    <workerClass>BiomeWorker_Glowforest</workerClass>
    <settleWarning>Large sulfur spouts permanently darken the skies in glowforests, making it hard to grow most crops.</settleWarning>
    <animalDensity>4.8</animalDensity>
    <plantDensity>0.75</plantDensity>
    <settlementSelectionWeight>0.05</settlementSelectionWeight>
    <campSelectionWeight>0.9</campSelectionWeight>
    <movementDifficulty>2</movementDifficulty>
    <lakeBeachTerrain>Marsh</lakeBeachTerrain>
    <mudTerrain>Marsh</mudTerrain>
    <riverbankTerrain>Riverbank</riverbankTerrain>
    <riverbankSizeRange>6~8</riverbankSizeRange>
    <texture>World/Biomes/Glowforest</texture>
    <forageability>1</forageability>
    <foragedFood>RawFungus</foragedFood>
    <wildPlantRegrowDays>13</wildPlantRegrowDays>
    <wildPlantsAreCavePlants>true</wildPlantsAreCavePlants>
    <maxFishPopulation>600</maxFishPopulation>
    <noGravel>true</noGravel> <!-- looks bad next to glowforest soil -->
    <fishTypes>
      <freshwater_Common>
        <Fish_Bass>1</Fish_Bass>
      </freshwater_Common>
      <freshwater_Uncommon>
        <Fish_Catfish>1</Fish_Catfish>
      </freshwater_Uncommon>
      <saltwater_Common>
        <Fish_Bluefish>1</Fish_Bluefish>
      </saltwater_Common>
      <saltwater_Uncommon>
        <Fish_Marlin>1</Fish_Marlin>
        <Fish_Flounder>1</Fish_Flounder>
      </saltwater_Uncommon>
      <rareCatchesSetMaker>RareFishingCatches_Glowforest</rareCatchesSetMaker>
    </fishTypes>
    <soundsAmbient>
      <li>Ambient_NightInsects_Jungle</li>
      <li>Ambient_DayInsects_Jungle</li>
    </soundsAmbient>
    <diseaseMtbDays>50</diseaseMtbDays>
    <diseases>
      <li>
        <diseaseInc>Disease_Malaria</diseaseInc>
        <commonality>160</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SleepingSickness</diseaseInc>
        <commonality>140</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Flu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Plague</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_GutWorms</diseaseInc>
        <commonality>80</commonality>
      </li>
      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>80</commonality>
      </li>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>

      <li>
        <diseaseInc>Disease_AnimalFlu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalPlague</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_OrganDecay</diseaseInc>
        <commonality>10</commonality>
      </li>
    </diseases>
    <terrainsByFertility>
      <li>
        <terrain>GlowforestSoil</terrain>
        <min>-999</min>
        <max>0.87</max>
      </li>
      <li>
        <terrain>SoilRich</terrain>
        <min>0.87</min>
        <max>999</max>
      </li>
    </terrainsByFertility>
    <terrainPatchMakers>
      <li>
        <perlinFrequency>0.04</perlinFrequency>
        <thresholds>
          <li>
            <terrain>MarshyTerrain</terrain>
            <min>0.6</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
      <li>
        <perlinFrequency>0.027</perlinFrequency>
        <thresholds>
          <li>
            <terrain>SoilRich</terrain>
            <min>-0.1</min>
            <max>0.32</max>
          </li>
          <li>
            <terrain>Mud</terrain>
            <min>0.32</min>
            <max>0.6</max>
          </li>
          <li>
            <terrain>Marsh</terrain>
            <min>0.6</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
      <li>
        <perlinFrequency>0.035</perlinFrequency>
        <thresholds>
          <li>
            <terrain>MarshyTerrain</terrain>
            <min>0.5</min>
            <max>0.75</max>
          </li>
          <li>
            <terrain>Marsh</terrain>
            <min>0.75</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
    </terrainPatchMakers>
    <baseWeatherCommonalities>
      <Clear>18</Clear>
      <Fog>2</Fog>
      <Rain>1</Rain>
      <DryThunderstorm>0.3</DryThunderstorm>
      <RainyThunderstorm>1.7</RainyThunderstorm>
      <FoggyRain>2</FoggyRain>
      <SnowGentle>4</SnowGentle>
      <SnowHard>4</SnowHard>
      <GrayPall MayRequire="Ludeon.RimWorld.Anomaly">1</GrayPall>
      <BlindFog MayRequire="Ludeon.RimWorld.Odyssey">1</BlindFog>
      <TorrentialRain MayRequire="Ludeon.RimWorld.Odyssey">0.5</TorrentialRain>
    </baseWeatherCommonalities>
    <wildPlants>
      <Plant_Timbershroom>0.1</Plant_Timbershroom>
      <Plant_Nightgrass>12.0</Plant_Nightgrass>
      <Boomshroom>0.01</Boomshroom>
      <Plant_Willowgill>0.2</Plant_Willowgill>
      <Glowstool>0.01</Glowstool>
      <Agarilux>0.01</Agarilux>
      <Bryolux>0.05</Bryolux>
      <Plant_Psilocap>0.01</Plant_Psilocap>
      <Plant_NightRafflesia>0.01</Plant_NightRafflesia>
    </wildPlants>
    <wildAnimals>
      <Bullfrog>0.5</Bullfrog>
      <Boomalope>0.5</Boomalope>
      <Capybara>0.5</Capybara>
      <Cassowary>0.5</Cassowary>
      <Chinchilla>0.1</Chinchilla>
      <Cobra>0.2</Cobra>
      <Iguana>0.22</Iguana>
      <MonitorLizard>0.5</MonitorLizard>
      <Rat>1</Rat>
      <Tortoise>0.5</Tortoise>
      <Warg>0.07</Warg>
      <WildBoar>0.5</WildBoar>
      <Raccoon>0.5</Raccoon>
      <Fox_Fennec>0.15</Fox_Fennec>
      <Sparrow>0.25</Sparrow>
      <Peacock>0.25</Peacock>
      <Megavole>0.25</Megavole>
      <ColossusToad>0.25</ColossusToad>
    </wildAnimals>
    <pollutionWildAnimals MayRequire="Ludeon.RimWorld.Biotech">
      <Toxalope MayRequire="Ludeon.RimWorld.Biotech">0.4</Toxalope>
      <Rat>1</Rat>
      <Raccoon>0.5</Raccoon>
      <Boomalope>0.1</Boomalope>
    </pollutionWildAnimals>
    <coastalWildAnimals>
      <HermitCrab>0.1</HermitCrab>
    </coastalWildAnimals>
    <allowedPackAnimals>
      <li>Muffalo</li>
      <li>Alpaca</li>
    </allowedPackAnimals>
    <biomeMapConditions>
      <li>DarkenedSkies</li>
    </biomeMapConditions>
    <preventGenSteps>
      <li MayRequire="Ludeon.RimWorld.Royalty">AnimaTrees</li>
    </preventGenSteps>
    <extraGenSteps>
      <li>GeothermalVents</li>
    </extraGenSteps>
  </BiomeDef>

</Defs>
