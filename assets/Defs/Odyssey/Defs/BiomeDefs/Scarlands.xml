<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <BiomeDef>
    <defName>Scarlands</defName>
    <label>scarlands</label>
    <description>Ruins of an ancient city which was destroyed by weapons of mass destruction. Water here is toxic and scaria runs rampant among the animals. Mechanoids lurk among the shattered buildings, waiting to awaken and kill again.</description>
    <workerClass>BiomeWorker_Scarlands</workerClass>
    <settleWarning>Scarlands are inhabited by dangerous insects and rogue mechanoids. Water is toxic and scaria runs rampant among the animals.</settleWarning>
    <animalDensity>1.0</animalDensity>
    <plantDensity>0.4</plantDensity>
    <wildAnimalScariaChance>0.5</wildAnimalScariaChance>
    <settlementSelectionWeight>0.5</settlementSelectionWeight>
    <movementDifficulty>1</movementDifficulty>
    <lakeBeachTerrain>Gravel</lakeBeachTerrain>
    <mudTerrain>MarshyTerrain</mudTerrain>
    <riverbankTerrain>MarshyTerrain</riverbankTerrain>
    <riverbankSizeRange>6~8</riverbankSizeRange>
    <texture>World/Biomes/Scarlands</texture>
    <forageability>0.25</forageability>
    <foragedFood>RawBerries</foragedFood>
    <wildPlantRegrowDays>20</wildPlantRegrowDays>
    <diseaseMtbDays>50</diseaseMtbDays>
    <pollutionOffset>0.05</pollutionOffset>
    <maxFishPopulation>0</maxFishPopulation>
    <waterShallowTerrain>ToxicWaterShallow</waterShallowTerrain>
    <waterDeepTerrain>ToxicWaterDeep</waterDeepTerrain>
    <oceanShallowTerrain>ToxicWaterOceanShallow</oceanShallowTerrain>
    <oceanDeepTerrain>ToxicWaterOceanDeep</oceanDeepTerrain>
    <waterMovingShallowTerrain>ToxicWaterMovingShallow</waterMovingShallowTerrain>
    <waterMovingChestDeepTerrain>ToxicWaterMovingChestDeep</waterMovingChestDeepTerrain>
    <soundsAmbient>
      <li>Ambient_NightInsects_Standard</li>
    </soundsAmbient>
    <diseases>
      <li>
        <diseaseInc>Disease_Flu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Plague</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_Malaria</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_GutWorms</diseaseInc>
        <commonality>50</commonality>
      </li>
      <li>
        <diseaseInc>Disease_FibrousMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_SensoryMechanites</diseaseInc>
        <commonality>30</commonality>
      </li>
      <li>
        <diseaseInc>Disease_MuscleParasites</diseaseInc>
        <commonality>50</commonality>
      </li>

      <li>
        <diseaseInc>Disease_AnimalFlu</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_AnimalPlague</diseaseInc>
        <commonality>100</commonality>
      </li>
      <li>
        <diseaseInc>Disease_OrganDecay</diseaseInc>
        <commonality>10</commonality>
      </li>
    </diseases>
    <terrainsByFertility>
      <li>
        <terrain>AncientMegastructure</terrain>
        <min>-999</min>
        <max>0.7</max>
      </li>
      <li>
        <terrain>Soil</terrain>
        <min>0.7</min>
        <max>999</max>
      </li>
    </terrainsByFertility>
    <terrainPatchMakers>
      <li>
        <perlinFrequency>0.015</perlinFrequency>
        <isPond>true</isPond>
        <thresholds>
          <li>
            <terrain>ToxicWaterShallow</terrain>
            <min>0.93</min>
            <max>1.06</max>
          </li>
          <li>
            <terrain>ToxicWaterDeep</terrain>
            <min>1.06</min>
            <max>999</max>
          </li>
        </thresholds>
      </li>
    </terrainPatchMakers>
    <baseWeatherCommonalities>
      <Clear>12</Clear>
      <Fog>1</Fog>
      <Rain>2</Rain>
      <DryThunderstorm>1</DryThunderstorm>
      <RainyThunderstorm>1</RainyThunderstorm>
      <FoggyRain>2</FoggyRain>
      <SnowGentle>2</SnowGentle>
      <SnowHard>2</SnowHard>
      <GrayPall MayRequire="Ludeon.RimWorld.Anomaly">1</GrayPall>
      <ToxRain>1</ToxRain>
      <Overcast>6</Overcast>
    </baseWeatherCommonalities>
    <wildPlants>
      <Plant_YellowGrass>2.0</Plant_YellowGrass>
      <Plant_Thornvine>8.0</Plant_Thornvine>
      <Plant_GrayGrass MayRequire="Ludeon.RimWorld.Biotech">2</Plant_GrayGrass>
      <Plant_Brambles_Leafless>1.0</Plant_Brambles_Leafless>
      <Plant_Ripthorn MayRequire="Ludeon.RimWorld.Biotech">0.8</Plant_Ripthorn>
      <Plant_Dandelion>0.5</Plant_Dandelion>
      <Plant_Bush_Leafless>0.6</Plant_Bush_Leafless>
      <Plant_TreeSnagroot>0.4</Plant_TreeSnagroot>
      <Plant_Berry_Leafless>0.02</Plant_Berry_Leafless>
      <Plant_Witchwood MayRequire="Ludeon.RimWorld.Biotech">0.5</Plant_Witchwood>
    </wildPlants>
    <wildAnimals>
      <Rat>1.00</Rat>
      <Raccoon>0.5</Raccoon>
      <Pig>0.07</Pig>
      <Boomalope>0.4</Boomalope>
      <Boomrat>0.4</Boomrat>
      <Panther>0.07</Panther>
      <BogHound>0.5</BogHound>
      <MonitorLizard>0.5</MonitorLizard>
      <Crow>0.5</Crow>
    </wildAnimals>
    <pollutionWildAnimals MayRequire="Ludeon.RimWorld.Biotech">
      <Toxalope MayRequire="Ludeon.RimWorld.Biotech">0.4</Toxalope>
      <WasteRat MayRequire="Ludeon.RimWorld.Biotech">0.1</WasteRat>
      <Rat>1</Rat>
      <Raccoon>0.5</Raccoon>
      <Boomrat>0.4</Boomrat>
      <Boomalope>0.1</Boomalope>
      <Warg>0.05</Warg>
    <MonitorLizard>0.5</MonitorLizard>
    </pollutionWildAnimals>
    <allowedPackAnimals>
      <li>Muffalo</li>
      <li>Alpaca</li>
    </allowedPackAnimals>
    <extraGenSteps>
      <li>AncientRuins_Scarlands</li>
      <li>CratersLarge</li>
      <li>CratersMedium</li>
      <li>CratersSmall</li>
      <li>ScarlandsJunkClusters</li>
      <li>ScarlandsJunkPrefabs</li>
    </extraGenSteps>
  </BiomeDef>

</Defs>
