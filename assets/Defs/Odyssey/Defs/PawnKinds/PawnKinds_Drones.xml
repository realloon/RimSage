<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <PawnKindDef Abstract="True" Name="BaseDroneKind">
    <defaultFactionDef>AncientsHostile</defaultFactionDef>
    <aiAvoidCover>true</aiAvoidCover>
    <destroyGearOnDrop>true</destroyGearOnDrop>
    <canStrip>false</canStrip>
    <minGenerationAge MayRequire="Ludeon.RimWorld.Biotech">200</minGenerationAge>
    <forceNormalGearQuality>true</forceNormalGearQuality>
    <allowInMechClusters>false</allowInMechClusters>
    <forceNoDeathNotification>true</forceNoDeathNotification>
    <weaponMoney>9999~9999</weaponMoney>
    <weaponTags />
    <preventIdeo>true</preventIdeo>
    <allowOldAgeInjuries>false</allowOldAgeInjuries>
    <immuneToGameConditionEffects>true</immuneToGameConditionEffects>
    <combatPower>10</combatPower>
    <techHediffsChance>1</techHediffsChance>
    <techHediffsMoney>9999~9999</techHediffsMoney>
    <controlGroupPortraitZoom>1.8</controlGroupPortraitZoom>
    <forceDeathOnDowned>true</forceDeathOnDowned>
    <canOpenDoors>false</canOpenDoors>
  </PawnKindDef>
  
  <PawnKindDef ParentName="BaseDroneKind">
    <defName>Drone_Hunter</defName>
    <label>hunter drone</label>
    <labelPlural>hunter drones</labelPlural>
    <race>Drone_Hunter</race>
    <combatPower>75</combatPower>
    <canOpenDoors>true</canOpenDoors>
    <canOpenAnyDoor>true</canOpenAnyDoor>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Drone/Hunter/HunterDrone</texPath>
          <drawSize>1.2</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

  <PawnKindDef ParentName="BaseDroneKind">
    <defName>Drone_Wasp</defName>
    <label>wasp</label>
    <labelPlural>wasps</labelPlural>
    <race>Drone_Wasp</race>
    <combatPower>25</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Drone/Wasp/WaspDrone</texPath>
          <drawSize>0.95</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

  <PawnKindDef ParentName="BaseDroneKind">
    <defName>Drone_Sentry</defName>
    <label>sentry drone</label>
    <labelPlural>sentry drones</labelPlural>
    <race>Drone_Sentry</race>
    <combatPower>75</combatPower>
    <canOpenAnyDoor>true</canOpenAnyDoor>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Drone/Sentry/SentryDrone</texPath>
          <drawSize>1.45</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <canOpenDoors>true</canOpenDoors>
    <weaponTags>
      <li>SentryDroneGunShortRange</li>
    </weaponTags>
  </PawnKindDef>
</Defs>