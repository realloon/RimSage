<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="PlantBase" Abstract="True" Name="WaterPlantBase">
    <plant>
      <wildPlantUseDistanceToShore>true</wildPlantUseDistanceToShore>
      <completelyIgnoreFertility>true</completelyIgnoreFertility>
      <showInFrozenWater>false</showInFrozenWater>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="WaterPlantBase">
    <defName>Plant_Reeds</defName>
    <label>reeds</label>
    <description>A tall slender plant that grows in water.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>0.4</Flammability>
      <Nutrition>0.50</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Reeds</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <ingestible />
    <plant>
      <growDays>2.5</growDays>
      <harvestWork>40</harvestWork>
      <maxMeshCount>4</maxMeshCount>
      <visualSizeRange>0.7~0.8</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildTerrainTags>
        <li>Mud</li>
        <li>WaterMarshy</li>
        <li>WaterFreshShallow</li>
      </wildTerrainTags>
    </plant>
  </ThingDef>

  <ThingDef ParentName="WaterPlantBase">
    <defName>Plant_LilyPad</defName>
    <label>lily pad</label>
    <description>A water plant with a broad floating leaf.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>0.4</Flammability>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/LilyPad</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <ingestible>
      <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
      <growDays>2.5</growDays>
      <harvestWork>40</harvestWork>
      <maxMeshCount>4</maxMeshCount>
      <visualSizeRange>0.3~0.4</visualSizeRange>
      <topWindExposure>0</topWindExposure>
      <wildTerrainTags>
        <li>WaterMarshy</li>
        <li>WaterFreshShallowStill</li>
      </wildTerrainTags>
    </plant>
  </ThingDef>

  <ThingDef ParentName="WaterPlantBase">
    <defName>Plant_Bulrush</defName>
    <label>bulrush</label>
    <description>A plant commonly found in swamps, recognizable for its brown cigar-shaped top.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>0.4</Flammability>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Bulrush</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <ingestible>
      <preferability>NeverForNutrition</preferability>
    </ingestible>
    <selectable>true</selectable>
    <plant>
      <growDays>2.5</growDays>
      <harvestWork>40</harvestWork>
      <visualSizeRange>0.7~0.9</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildTerrainTags>
        <li>WaterMarshy</li>
        <li>WaterFreshShallowStill</li>
      </wildTerrainTags>
    </plant>
  </ThingDef>

  <ThingDef ParentName="WaterPlantBase">
    <defName>Plant_Lotus</defName>
    <label>lotus</label>
    <description>An aquatic plant known for its fragrant flowers.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>14</Beauty>
      <BeautyOutdoors>14</BeautyOutdoors>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Lotus</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <ingestible>
      <preferability>NeverForNutrition</preferability>
    </ingestible>
    <selectable>true</selectable>
    <plant>
      <topWindExposure>0.1</topWindExposure>
      <growDays>1.5</growDays>
      <lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
      <visualSizeRange>0.5~0.6</visualSizeRange>
      <purpose>Beauty</purpose>
      <wildTerrainTags>
        <li>WaterMarshy</li>
        <li>WaterFreshShallowStill</li>
      </wildTerrainTags>
    </plant>
  </ThingDef>
</Defs>