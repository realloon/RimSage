<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Scarlands -->
  
  <ThingDef ParentName="PlantBase">
    <defName>Plant_Thornvine</defName>
    <label>thornvine</label>
    <description>A prickly vine adapted to living in harsh conditions.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>-5</Beauty>
      <BeautyOutdoors>-5</BeautyOutdoors>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Thornvine</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowOrSandDepth>0.5</hideAtSnowOrSandDepth>
    <ingestible>
      <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
      <pollution>Any</pollution>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0</fertilitySensitivity>
      <growDays>2.5</growDays>
      <maxMeshCount>4</maxMeshCount>
      <visualSizeRange>0.6~0.8</visualSizeRange>
      <topWindExposure>0.1</topWindExposure>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>

  <ThingDef ParentName="TreeBase">
    <defName>Plant_TreeSnagroot</defName>
    <label>snagroot tree</label>
    <description>A gnarled slow-growing tree, adapted to live in toxic scarlands. When harvested, it yields a meager amount of wood.</description>
    <graphicData>
      <texPath>Things/Plant/TreeSnagroot</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.15, 0.3, 0.15)</volume>
        <offset>(0,0,-0.13)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <Beauty>-5</Beauty>
      <BeautyOutdoors>-5</BeautyOutdoors>
    </statBases>
    <ingestible />
    <plant>
      <growDays>52</growDays>
      <pollution>Any</pollution>
      <fertilityMin>0.50</fertilityMin>
      <fertilitySensitivity>0</fertilitySensitivity>
      <visualSizeRange>1.5~3.0</visualSizeRange>
      <harvestWork>400</harvestWork>
      <harvestYield>8</harvestYield>
      <immatureGraphicPath>Things/Plant/TreeSnagroot_Immature</immatureGraphicPath>
    </plant>
  </ThingDef>

  <ThingDef ParentName="Plant_Berry">
    <defName>Plant_Berry_Leafless</defName>
    <graphicData>
      <texPath>Things/Plant/BerryPlant_Leafless</texPath>
    </graphicData>
    <plant>
      <leaflessGraphicPath />
      <immatureGraphicPath />
    </plant>
  </ThingDef>

  <ThingDef ParentName="Plant_Bush">
    <defName>Plant_Bush_Leafless</defName>
    <graphicData>
      <texPath>Things/Plant/Bush_Leafless</texPath>
    </graphicData>
    <plant>
      <leaflessGraphicPath />
      <immatureGraphicPath />
    </plant>
  </ThingDef>

  <ThingDef ParentName="Plant_Brambles">
    <defName>Plant_Brambles_Leafless</defName>
    <graphicData>
      <texPath>Things/Plant/Brambles_Leafless</texPath>
    </graphicData>
    <plant>
      <leaflessGraphicPath />
      <immatureGraphicPath />
    </plant>
  </ThingDef>
  
  <!-- Lavafields -->
  
  <ThingDef ParentName="PlantBase">
    <defName>Plant_MagmaCactus</defName>
    <label>magma cactus</label>
    <description>A resilient species of cactus notable for its ability to survive extreme heat.</description>
    <uiIconScale>0.5</uiIconScale>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <Nutrition>0.25</Nutrition>
      <Flammability>0.05</Flammability>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/MagmaCactus</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>2.0</drawSize>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>30</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0</fertilitySensitivity>
      <growDays>2.5</growDays>
      <visualSizeRange>0.40~0.65</visualSizeRange>
      <topWindExposure>0.0</topWindExposure>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>4</wildClusterWeight>
      <wildOrder>2</wildOrder>
      <maxOptimalGrowthTemperature>68</maxOptimalGrowthTemperature>
      <maxGrowthTemperature>74</maxGrowthTemperature>
    </plant>
  </ThingDef>
  
  <!-- Glowforest -->
  
  <ThingDef ParentName="CavePlantBase" Name="GlowforestPlantBase" Abstract="True">
    <plant>
      <cavePlant>false</cavePlant>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>Plant_Nightgrass</defName>
    <label>night grass</label>
    <description>A grass-like fungus that grows as part of a massive mycelium network.</description>
    <statBases>
      <MaxHitPoints>65</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <Nutrition>0.50</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Nightgrass</texPath>
      <drawSize>1.4</drawSize>
    </graphicData>
    <uiIconScale>0.715</uiIconScale>
    <hideAtSnowOrSandDepth>0.5</hideAtSnowOrSandDepth>
    <ingestible />
    <plant>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0.3</fertilitySensitivity>
      <growDays>5.0</growDays>
      <harvestWork>40</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.4~0.6</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildOrder>1</wildOrder>
      <pollution>Any</pollution>
      <growMinGlow>0</growMinGlow>
      <growOptimalGlow>0</growOptimalGlow>
      <diesToLight>true</diesToLight>
      <wildClusterRadius>2</wildClusterRadius>
      <wildClusterWeight>10</wildClusterWeight>
      <plantRespawningCommonalityFactor>0.04</plantRespawningCommonalityFactor> <!-- This might look really low, but it brings nightgrass down to ~82% commonality which is about right -->
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBaseNonEdible">
    <defName>Boomshroom</defName>
    <label>boomshroom</label>
    <thingClass>Plant_Boomshroom</thingClass>
    <description>These mushrooms produce volatile chemicals as a defensive measure. They can be harvested for chemfuel. However, this must be done with extreme caution, as the mushrooms can explode if they're destroyed.\n\nGlitterworld researchers have used genetic material from boomshrooms to bioengineer a number of chemfuel-producing animals.</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Beauty>-2</Beauty>
      <BeautyOutdoors>0</BeautyOutdoors>
    </statBases>
    <altitudeLayer>Building</altitudeLayer>
    <graphicData>
      <texPath>Things/Plant/Boomshroom</texPath>
    </graphicData>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <pathCost>30</pathCost>
    <plant>
      <fertilityMin>0.01</fertilityMin>
      <fertilitySensitivity>0.15</fertilitySensitivity>
      <growDays>60</growDays>
      <dieIfLeafless>false</dieIfLeafless>
      <harvestYield>8</harvestYield>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>Chemfuel</harvestedThingDef>
      <harvestAfterGrowth>0.30</harvestAfterGrowth>
      <neverBlightable>true</neverBlightable>
      <visualSizeRange>0.9~1.5</visualSizeRange>
      <topWindExposure>0.1</topWindExposure>
      <growMinGlow>0</growMinGlow>
      <growOptimalGlow>0</growOptimalGlow>
      <wildClusterRadius>6</wildClusterRadius>
      <wildClusterWeight>200</wildClusterWeight>
      <purpose>Misc</purpose>
      <pollution>Any</pollution>
      <diesToLight>true</diesToLight>
    </plant>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(255,150,100,0)</glowColor>
        <overrideIsCavePlant>true</overrideIsCavePlant>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="GlowforestPlantBase">
    <defName>Plant_Psilocap</defName>
    <label>psilocap</label>
    <thingClass>Plant_Psilocap</thingClass>
    <tickerType>Normal</tickerType>
    <description>A fungus that gives off hallucinogenic spores. Standing next to them is enough to produce mild hallucinations. Psilocaps can be harvested and ingested to produce a vivid sensory experience that increases the user's mood.</description>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Beauty>3</Beauty>
      <BeautyOutdoors>3</BeautyOutdoors>
      <Nutrition>0.5</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Psilocap</texPath>
      <drawSize>1.7</drawSize>
    </graphicData>
    <uiIconScale>0.588</uiIconScale>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.01</fertilityMin>
      <fertilitySensitivity>0.15</fertilitySensitivity>
      <growDays>20</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestYield>5</harvestYield>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>Drug_Psilocap</harvestedThingDef>
      <neverBlightable>true</neverBlightable>
      <visualSizeRange>0.4~0.7</visualSizeRange>
      <topWindExposure>0.05</topWindExposure>
      <wildClusterRadius>6</wildClusterRadius>
      <wildClusterWeight>25</wildClusterWeight>
      <purpose>Food</purpose>
      <pollution>Any</pollution>
    </plant>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(50,33,145,0)</glowColor>
        <overrideIsCavePlant>true</overrideIsCavePlant>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="GlowforestPlantBase">
    <defName>Plant_Willowgill</defName>
    <label>willowgill</label>
    <description>A tall spindly slow-growing mushroom with gills that droop like a willow tree. It gives off a soft light.</description>
    <fillPercent>0.4</fillPercent>
    <altitudeLayer>Building</altitudeLayer>
    <graphicData>
      <texPath>Things/Plant/Willowgill</texPath>
      <drawSize>0.8</drawSize>
      <shadowData>
        <volume>(0.2, 0.6, 0.2)</volume>
        <offset>(0,0,-0.3)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0.8</Flammability>
      <Mass>150</Mass>
      <BeautyOutdoors>2</BeautyOutdoors>
      <Nutrition>2.0</Nutrition>
    </statBases>
    <selectable>true</selectable>
    <blockWind>true</blockWind>
    <neverMultiSelect>false</neverMultiSelect>
    <minifiedDef IsNull="True" />
    <plant>
      <topWindExposure>0.1</topWindExposure>
      <fertilityMin>0.01</fertilityMin>
      <growDays>40</growDays>
      <neverBlightable>true</neverBlightable>
      <growMinGlow>0</growMinGlow>
      <growOptimalGlow>0</growOptimalGlow>
      <visualSizeRange>1~2</visualSizeRange>
      <wildClusterRadius>12</wildClusterRadius>
      <wildClusterWeight>8</wildClusterWeight>
      <wildOrder>1</wildOrder>
      <sowResearchPrerequisites Inherit="False" />
      <treeLoversCareIfChopped>false</treeLoversCareIfChopped>
      <burnedThingDef IsNull="True" />
      <choppedThingDef IsNull="True" />
      <smashedThingDef IsNull="True" />
    </plant>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>12</glowRadius>
        <glowColor>(12,16,32,0)</glowColor>
        <overrideIsCavePlant>true</overrideIsCavePlant>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="BushBase">
    <defName>Plant_NightRafflesia</defName>
    <label>night rafflesia</label>
    <description>A distant cousin of the giant rafflesia, this plant has adapted to thrive in dark locations. Its beauty is tempered by a strong stench of musk and rotten eggs.</description>
    <statBases>
      <Beauty>-6</Beauty>
      <BeautyOutdoors>-6</BeautyOutdoors>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/NightRafflesia</texPath>
      <drawSize>2</drawSize>
      <addTopAltitudeBias>true</addTopAltitudeBias>
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <uiIconScale>0.5</uiIconScale>
    <plant>
      <topWindExposure>0.07</topWindExposure>
      <wildClusterRadius>-1</wildClusterRadius>
      <diesToLight>true</diesToLight>
      <growMinGlow>0</growMinGlow>
      <growOptimalGlow>0</growOptimalGlow>
    </plant>
  </ThingDef>
  
  <!-- Grasslands -->

  <ThingDef ParentName="PlantBase">
    <defName>Plant_YellowGrass</defName>
    <label>yellow grass</label>
    <description>Wild grass. Grows anywhere there is a little light and minimally fertile ground.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.50</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/YellowGrass</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowOrSandDepth>0.5</hideAtSnowOrSandDepth>
    <ingestible />
    <plant>
      <fertilityMin>0.05</fertilityMin>
      <fertilitySensitivity>0.3</fertilitySensitivity>
      <growDays>2.5</growDays>
      <leaflessGraphicPath>Things/Plant/Grass_Leafless</leaflessGraphicPath>
      <harvestWork>40</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.4~0.6</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildOrder>1</wildOrder>
      <maxGrowthTemperature>75</maxGrowthTemperature>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>Plant_YellowTallGrass</defName>
    <label>tall yellow grass</label>
    <description>Wild tall grass that grows in tough thickets. It slows down anyone moving over it.</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Flammability>1.3</Flammability>
      <Nutrition>0.50</Nutrition>
    </statBases>
    <pathCost>14</pathCost>
    <graphicData>
      <texPath>Things/Plant/YellowTallGrass</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowOrSandDepth>0.5</hideAtSnowOrSandDepth>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.7</fertilitySensitivity>
      <growDays>3</growDays>
      <harvestWork>60</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.7~0.85</visualSizeRange>
      <topWindExposure>0.4</topWindExposure>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>10</wildClusterWeight>
      <wildOrder>1</wildOrder>
      <pollutedGraphicPath>Things/Plant/Grass_Polluted</pollutedGraphicPath>
      <maxGrowthTemperature>75</maxGrowthTemperature>
    </plant>
  </ThingDef>
  
  <!-- Glaical Plains -->

  <ThingDef ParentName="PlantBase">
    <defName>Plant_Fireweed</defName>
    <label>fireweed</label>
    <description>A low-lying plant that produces clusters of purple flowers. It is common in alpine environments.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>8</Beauty>
      <BeautyOutdoors>4</BeautyOutdoors>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Fireweed</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <hideAtSnowOrSandDepth>0.5</hideAtSnowOrSandDepth>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.0</fertilitySensitivity>
      <growDays>2.5</growDays>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>4</maxMeshCount>
      <visualSizeRange>0.3~0.4</visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>8</wildClusterWeight>
      <wildOrder>1</wildOrder>
    </plant>
  </ThingDef>

</Defs>