  </FleckDef>

  <FleckDef Name="FishShadow" ParentName="FleckBase">
    <defName>FishShadow</defName>
    <fleckSystemClass>FleckSystemThrown</fleckSystemClass>
    <graphicData>
      <texPath>Things/Mote/FishShadow</texPath>
      <shaderType>FishShadow</shaderType>
      <color>(1.0, 1.0, 1.0, 0.2)</color>
      <shaderParameters>
        <_SwimFrequency>5.0</_SwimFrequency>
        <_SwimSpeed>0.4</_SwimSpeed>
      </shaderParameters>
      <renderInstanced>true</renderInstanced>
    </graphicData>
    <fadeInTime>1.5</fadeInTime>
    <solidTime>2.0</solidTime>
    <fadeOutTime>0.5</fadeOutTime>
    <growthRate>0.0</growthRate>
  </FleckDef>

  <!-- There's no way to scale it on one axis at runtime -->
  <FleckDef ParentName="FishShadow">
    <defName>FishShadowReverse</defName>
    <graphicData>
      <drawSize>(-1.0, 1.0)</drawSize>
    </graphicData>
  </FleckDef>
</Defs>