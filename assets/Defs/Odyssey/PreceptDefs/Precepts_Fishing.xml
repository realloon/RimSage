<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>Fishing</defName>
    <label>fishing</label>
    <iconPath>UI/Issues/Fishing</iconPath>
  </IssueDef>

  <!-- Precepts -->

  <PreceptDef>
    <defName>Fishing_Prohibited</defName>
    <issue>Fishing</issue>
    <label>prohibited</label>
    <description>Fishing is immoral. We should never do it.</description>
    <impact>Medium</impact>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <displayOrderInIssue>0</displayOrderInIssue>
    <exclusionTags>
      <li>SlaughteringFishBad</li>
    </exclusionTags>
    <associatedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">AnimalPersonhood</li>
    </associatedMemes>
    <comps>
      <li Class="PreceptComp_KnowsMemoryThought">
        <eventDef>SlaughteredFish</eventDef>
        <thought>SlaughteredFish_Know_Prohibited</thought>
      </li>
      <li Class="PreceptComp_KnowsMemoryThought">
        <eventDef>SlaughteredFish</eventDef>
        <thought>SlaughteredFish_Know_Prohibited_Mood</thought>
        <description>Someone slaughtered fish</description>
      </li>
      <li Class="PreceptComp_UnwillingToDo">
        <eventDef>SlaughteredFish</eventDef>
        <description>Slaughter fish</description>
      </li>
    </comps>
  </PreceptDef>

  <PreceptDef>
    <defName>Fishing_Disapproved</defName>
    <issue>Fishing</issue>
    <label>disapproved</label>
    <description>Fishing is gruesome. We should avoid it.</description>
    <impact>Low</impact>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <displayOrderInIssue>10</displayOrderInIssue>
    <exclusionTags>
      <li>SlaughteringFishBad</li>
    </exclusionTags>
    <comps>
      <li Class="PreceptComp_SelfTookMemoryThought">
        <eventDef>SlaughteredFish</eventDef>
        <thought>SlaughteredFish_Disapproved</thought>
      </li>
      <li Class="PreceptComp_KnowsMemoryThought">
        <eventDef>SlaughteredFish</eventDef>
        <thought>SlaughteredFish_Know_Disapproved_Mood</thought>
        <description>Someone slaughtered a fish</description>
      </li>
      <li Class="PreceptComp_KnowsMemoryThought">
        <eventDef>SlaughteredFish</eventDef>
        <thought>SlaughteredFish_Know_Disapproved</thought>
      </li>
    </comps>
    <statOffsets>
      <FishingSpeed>-0.25</FishingSpeed>
      <FishingYield>-0.10</FishingYield>
    </statOffsets>
  </PreceptDef>

  <PreceptDef>
    <defName>Fishing_Sacred</defName>
    <issue>Fishing</issue>
    <label>sacred</label>
    <description>Fishing is part of the right path.</description>
    <impact>Low</impact>
    <displayOrderInImpact>1000</displayOrderInImpact>
    <displayOrderInIssue>30</displayOrderInIssue>
    <comps>
      <li Class="PreceptComp_SituationalThought">
        <thought>SlaughteredFish_Sacred_NoFish</thought>
        <description>Not enough fish</description>
      </li>
      <li Class="PreceptComp_SelfTookMemoryThought">
        <eventDef>SlaughteredFish</eventDef>
        <thought>SlaughteredFish_Sacred</thought>
      </li>
    </comps>
    <statOffsets>
      <FishingYield>0.10</FishingYield>
    </statOffsets>
  </PreceptDef>

  <!-- Related content -->

  <HistoryEventDef>
    <defName>SlaughteredFish</defName>
    <label>slaughtered fish</label>
  </HistoryEventDef>
  
  <ThoughtDef>
    <defName>SlaughteredFish_Know_Prohibited</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>6</durationDays>
    <stackLimit>1</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <stages>
      <li>
        <label>killed fish</label>
        <baseOpinionOffset>-10</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SlaughteredFish_Know_Prohibited_Mood</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>6</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>fish slaughtered</label>
        <description>Someone is killing fish! Our slippery brothers and sisters are dying.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SlaughteredFish_Disapproved</defName>
    <durationDays>6</durationDays>
    <stages>
      <li>
        <label>slaughtered fish</label>
        <description>I had to kill fish. It was an ugly thing to do.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SlaughteredFish_Know_Disapproved</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>6</durationDays>
    <stackLimit>1</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <stages>
      <li>
        <label>killed fish</label>
        <baseOpinionOffset>-5</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SlaughteredFish_Know_Disapproved_Mood</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>6</durationDays>
    <stackLimit>1</stackLimit>
    <doNotApplyToQuestLodgers>true</doNotApplyToQuestLodgers>
    <stages>
      <li>
        <label>fish slaughtered</label>
        <description>Someone is killing fish! We should protect these beautiful creatures.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SlaughteredFish_Sacred</defName>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>fished recently</label>
        <description>Fishing puts me on the right path - at least for a little while.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SlaughteredFish_Sacred_NoFish</defName>
    <workerClass>ThoughtWorker_Precept_NoFish</workerClass>
    <stages>
      <li>
        <label>not enough fish</label>
        <description>I wish we were somewhere we could fish.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
