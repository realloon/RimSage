      <LeatherAmount>0</LeatherAmount>
      <MaxFlightTime>10</MaxFlightTime>
      <FlightCooldown>5</FlightCooldown>
      <Wildness>0.3</Wildness>
    </statBases>
    <uiIconScale>1.5</uiIconScale>
    <tools>
      <li>
        <label>mandibles</label>
