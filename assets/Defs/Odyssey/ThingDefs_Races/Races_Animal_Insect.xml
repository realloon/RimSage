<Defs>

  <ThingDef ParentName="BaseInsect">
    <defName>Larva</defName>
    <label>larva</label>
    <description>The juvenile form of larger bioengineered insects. Larva maintain and expand hives using an acidic secretion. If provoked, they defend themselves by spewing sludge.</description>
    <statBases>
      <MoveSpeed>2.0</MoveSpeed>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <MarketValue>35</MarketValue>
      <LeatherAmount>0</LeatherAmount>
      <Wildness>0.2</Wildness>
    </statBases>
    <tools>
      <li>
        <label>mandibles</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.1</chanceFactor>
      </li>
    </tools>
    <race>
      <body>Larva</body>
      <baseBodySize>0.2</baseBodySize>
      <baseHungerRate>0.10</baseHungerRate>
      <baseHealthScale>0.25</baseHealthScale>
      <useMeatFrom>Megaspider</useMeatFrom>
      <lifeExpectancy>4</lifeExpectancy>
      <trainability>Intermediate</trainability>
      <specialTrainables>
        <li>SludgeSpew</li>
      </specialTrainables>
      <lifeStageAges>
        <li>
          <def>EusocialInsectAdult</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Larva_Wounded</soundWounded>
          <soundDeath>Pawn_Larva_Death</soundDeath>
          <soundCall>Pawn_Larva_Call</soundCall>
          <soundAngry>Pawn_Larva_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalInsect</li>
    </tradeTags>
    <comps>
      <li Class="CompProperties_SpreadSludge">
        <mtbTicks>15000</mtbTicks>
        <abilityDef>SludgeSpew</abilityDef>
        <tryAvoidSludge>true</tryAvoidSludge>
      </li>
    </comps>
  </ThingDef>

