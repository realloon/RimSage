  <WeatherDef>
    <defName>ToxRain</defName>
    <label>tox rain</label>
    <description>Tox rain makes creatures sick with toxic buildup. It also reduces the accuracy of ranged weapons, extinguishes fire, and slows people down.</description>
    <temperatureRange>0~100</temperatureRange>
    <windSpeedFactor>1.5</windSpeedFactor>
    <accuracyMultiplier>0.8</accuracyMultiplier>
    <favorability>VeryBad</favorability>
    <perceivePriority>1</perceivePriority>
    <weatherThought>ToxWater</weatherThought>
    <rainRate>1</rainRate>
    <moveSpeedMultiplier>0.9</moveSpeedMultiplier>
    <doToxicBuildup>true</doToxicBuildup>
    <letterDef>ThreatSmall</letterDef>
    <letterText>Toxic rain has begun to fall from the sky. It will slowly sicken anyone it touches. Keep your colonists under a roof.</letterText>
    <letterLabel>Tox rain</letterLabel>
    <ambientSounds>
      <li>Ambient_Rain</li>
    </ambientSounds>
    <overlayClasses>
      <li>WeatherOverlay_ToxRain</li>
    </overlayClasses>
    <commonalityRainfallFactor>
      <points>
        <li>(0, 0)</li>
        <li>(1300, 1)</li>
        <li>(4000, 3.0)</li>
      </points>
    </commonalityRainfallFactor>
    <!-- Colors are Overcast -->
    <skyColorsDay>
      <sky>(0.8,0.8,0.8)</sky>
      <shadow>(0.92,0.92,0.92)</shadow>
      <overlay>(0.7,0.7,0.7)</overlay>
      <saturation>0.9</saturation>
    </skyColorsDay>
    <skyColorsDusk>
