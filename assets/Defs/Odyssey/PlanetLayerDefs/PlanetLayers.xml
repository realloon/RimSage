<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <PlanetLayerDef Name="OrbitLayer" Abstract="True">
    <layerType>OrbitLayer</layerType>
    <elevationString>200km</elevationString>
    <defaultBiome>Space</defaultBiome>
    <defaultMapWorldObject>Space</defaultMapWorldObject>
    <alwaysRaycastable>false</alwaysRaycastable>
    <obstructsExpandingIcons>false</obstructsExpandingIcons>
    <onlyAllowWhitelistedIncidents>true</onlyAllowWhitelistedIncidents>
    <onlyAllowWhitelistedGameConditions>true</onlyAllowWhitelistedGameConditions>
    <onlyAllowWhitelistedArrivals>true</onlyAllowWhitelistedArrivals>
    <onlyAllowWhitelistedArrivalModes>true</onlyAllowWhitelistedArrivalModes>
    <viewGizmoTexPath>UI/Commands/ViewOrbit</viewGizmoTexPath>
    <canFormCaravans>false</canFormCaravans>
    <isSpace>true</isSpace>
    <ignoreNoBuildArea>true</ignoreNoBuildArea>
    <settlementsPer100kTiles>1000~1000</settlementsPer100kTiles>
    <viewAngleSettlementsFactorCurve>
      <points>
        <li>(0, 1)</li>
        <li>(0.3, 1)</li>
        <li>(0.5, 0.75)</li>
        <li>(1, 0.5)</li>
      </points>
    </viewAngleSettlementsFactorCurve>
    <settlementWorldObjectDef>SpaceSettlement</settlementWorldObjectDef>
    <destroyedSettlementWorldObjectDef>DestroyedSpaceSettlement</destroyedSettlementWorldObjectDef>
    <raidPointsFactor>0.85</raidPointsFactor>
    <lineWidthFactor>7.5</lineWidthFactor>
    <gerundLabel>in</gerundLabel>
    <worldGenSteps>
      <li>Tiles</li>
      <li>Factions</li>
    </worldGenSteps>
    <worldDrawLayers>
      <li>WorldDrawLayer_ClosestTile</li>
    </worldDrawLayers>
    <worldTabs>
      <li>WITab_Orbit</li>
      <li>WITab_Planet</li>
    </worldTabs>
  </PlanetLayerDef>
  
  <PlanetLayerDef ParentName="OrbitLayer">
    <defName>Orbit</defName>
    <label>orbit</label>
    <viewGizmoTooltip>View locations that are orbiting the planet.</viewGizmoTooltip>
    <elevationString>200km</elevationString>
    <defaultBiome>Orbit</defaultBiome>
    <rangeDistanceFactor>20</rangeDistanceFactor>
  </PlanetLayerDef>
  
