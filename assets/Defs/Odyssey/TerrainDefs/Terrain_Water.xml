<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!-- Deep -->

  <TerrainDef Abstract="True" Name="ToxicWaterDeepBase" ParentName="WaterDeepBase">
    <renderPrecedence>395</renderPrecedence>
    <texturePath>Terrain/Surfaces/ToxicWaterDeepRamp</texturePath>
    <pollutedTexturePath>Terrain/Surfaces/ToxicWaterDeepRamp</pollutedTexturePath>
    <toxicBuildupFactor>3</toxicBuildupFactor>
    <pathCost>400</pathCost>
    <traversedThought>ToxWater</traversedThought>
    <waterBodyType>Other</waterBodyType>
    <statBases>
      <Beauty>-6</Beauty>
    </statBases>
  </TerrainDef>
  
  <TerrainDef ParentName="ToxicWaterDeepBase">
    <defName>ToxicWaterDeep</defName>
    <label>toxic deep water</label>
    <renderPrecedence>395</renderPrecedence>
  </TerrainDef>

  <TerrainDef ParentName="ToxicWaterDeepBase">
    <defName>ToxicWaterOceanDeep</defName>
    <label>toxic deep ocean water</label>
    <renderPrecedence>397</renderPrecedence>
    <tags>
      <li>Ocean</li>
    </tags>
  </TerrainDef>

  <!-- Chest-deep -->
  
  <TerrainDef Abstract="True" Name="ToxicWaterChestDeepBase" ParentName="WaterChestDeepBase">
