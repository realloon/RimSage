    <toxicBuildupFactor>3</toxicBuildupFactor>
    <pathCost>150</pathCost>
    <traversedThought>ToxWater</traversedThought>
    <waterBodyType>Other</waterBodyType>
    <floodTerrain>ToxicFlood</floodTerrain>
    <statBases>
      <Beauty>-6</Beauty>
    </statBases>
  </TerrainDef>

  <TerrainDef ParentName="ToxicWaterChestDeepBase">
    <defName>ToxicWaterMovingChestDeep</defName>
    <label>toxic chest-deep moving water</label>
    <renderPrecedence>399</renderPrecedence>
    <affordances>
      <li>MovingFluid</li>
    </affordances>
    <tags>
      <li>River</li>
    </tags>
    <waterDepthShaderParameters>
      <_UseWaterOffset>1</_UseWaterOffset>
    </waterDepthShaderParameters>
  </TerrainDef>

  <!-- Shallow -->

  <TerrainDef Abstract="True" Name="ToxicWaterShallowBase" ParentName="WaterShallowBase">
