    <pollutedTexturePath>Terrain/Surfaces/ToxicWaterShallowRamp</pollutedTexturePath>
    <waterDepthShader>Map/WaterDepth</waterDepthShader>
    <toxicBuildupFactor>3</toxicBuildupFactor>
    <pathCost>100</pathCost>
    <traversedThought>ToxWater</traversedThought>
    <waterBodyType>Other</waterBodyType>
    <floodTerrain>ToxicFlood</floodTerrain>
    <statBases>
      <Beauty>-6</Beauty>
    </statBases>
  </TerrainDef>

  <TerrainDef ParentName="ToxicWaterShallowBase">
    <defName>ToxicWaterShallow</defName>
    <label>toxic shallow water</label>
    <renderPrecedence>394</renderPrecedence>
    <driesTo>Gravel</driesTo>
  </TerrainDef>

  <TerrainDef ParentName="ToxicWaterShallowBase">
    <defName>ToxicWaterOceanShallow</defName>
    <label>toxic shallow ocean water</label>
    <renderPrecedence>396</renderPrecedence>
    <driesTo>Gravel</driesTo>
    <tags>
      <li>Ocean</li>
    </tags>
  </TerrainDef>

  <TerrainDef ParentName="ToxicWaterShallowBase">
    <defName>ToxicWaterMovingShallow</defName>
    <label>toxic shallow moving water</label>
    <renderPrecedence>398</renderPrecedence>
    <affordances>
      <li>MovingFluid</li>
    </affordances>
    <tags>
      <li>River</li>
    </tags>
    <waterDepthShaderParameters>
      <_UseWaterOffset>1</_UseWaterOffset>
    </waterDepthShaderParameters>
  </TerrainDef>

  <TerrainDef Name="HotSpring" ParentName="WaterShallowBase">
    <defName>HotSpring</defName>
    <label>hot spring water</label>
    <renderPrecedence>394</renderPrecedence>
    <driesTo>Sand</driesTo>
    <texturePath>Terrain/Surfaces/HotSpringRamp</texturePath>
    <pollutedTexturePath>Terrain/Surfaces/PollutedHotSpringRamp</pollutedTexturePath>
    <waterDepthShader>Map/WaterDepth</waterDepthShader>
    <pathCost>100</pathCost>
    <traversedThought>HotSpring</traversedThought>
    <meltSnowRadius>4</meltSnowRadius>
    <heatPerTick>0.01</heatPerTick>
    <canFreeze>false</canFreeze>
    <waterBodyType>Other</waterBodyType>
    <floodTerrain>SpringFlood</floodTerrain>
    <throwFleckChance>0.25</throwFleckChance>
    <fleckData>
      <fleck>AirPuff</fleck>
      <velocitySpeedRange>0.01~0.5</velocitySpeedRange>
      <velocityAngleRange>-90~90</velocityAngleRange>
      <rotationSpeedRange>-50~50</rotationSpeedRange>
      <solidTicksRange>1~3</solidTicksRange>
      <scaleRange>1.5~3</scaleRange>
    </fleckData>
    <statBases>
      <Beauty>2</Beauty>
    </statBases>
  </TerrainDef>

</Defs>