  <TerrainDef ParentName="Ice">
    <defName>ThinIce</defName>
    <label>thin ice</label>
    <texturePath>Terrain/Surfaces/ThinIce</texturePath>
    <pollutedTexturePath>Terrain/Surfaces/ThinIce</pollutedTexturePath>
    <temporary>true</temporary>
    <tempTerrain>
      <removedByExplosions>true</removedByExplosions>
      <replaceableByBridge>true</replaceableByBridge>
    </tempTerrain>
    <affordances Inherit="false">
      <li>Walkable</li>
      <li>Bridgeable</li>
      <li>ShallowWater</li>
    </affordances>
  </TerrainDef>

  <TerrainDef ParentName="LavaBase">
    <defName>LavaShallow</defName>
    <label>shallow lava</label>
    <texturePath>Terrain/Surfaces/ShallowLava</texturePath>
    <customShader>ShallowLava</customShader>
    <customShaderParameters>
      <_NoiseTex>/Other/Perlin</_NoiseTex>
      <_MaskTex>/Terrain/Surfaces/ShallowLavaMask</_MaskTex>
    </customShaderParameters>
    <pollutedTexturePath>Terrain/Surfaces/PollutedShallowLava</pollutedTexturePath>
    <pathCost>300</pathCost>
    <temporary>true</temporary>
    <tempTerrain>
      <terrainOnRemoved>CooledLava</terrainOnRemoved>
      <destroysFloors>true</destroysFloors>
    </tempTerrain>
  </TerrainDef>

</Defs>