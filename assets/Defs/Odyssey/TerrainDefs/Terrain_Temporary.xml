<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <TerrainDef ParentName="WaterShallow">
    <defName>ShallowFloodwater</defName>
    <label>shallow floodwater</label>
    <temporary>true</temporary>
    <tags>
      <li>Flood</li>
    </tags>
    <canFreeze>false</canFreeze> <!-- Thin ice and floodwater are both temp terrain, this means we can't support frozen floodwater -->
    <driesTo /> <!-- We don't want moisture pumps to turn temp terrain into stony soil -->
    <floodTerrain>ShallowFloodwater</floodTerrain>
  </TerrainDef>

  <TerrainDef ParentName="MarshBase">
